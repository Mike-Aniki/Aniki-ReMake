<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Ghost in the Shell — OPTIC CORE+ (verre, néons, halo diffus) -->

    <sys:Int32 x:Key="BackgroundImageIndex">33</sys:Int32>

    <!-- Accents (moins “clair”, plus immergé teal) -->
    <Color x:Key="GlyphColor">#2FD0DA</Color>
    <!-- cyan profond -->
    <Color x:Key="GlowFocusColor">#8FDDE3</Color>
    <!-- clair étouffé -->
    <Color x:Key="AccentViolet">#9A78C8</Color>
    <!-- violet froid -->

    <!-- Textes (jamais blanc pur dans l’esprit GitS) -->
    <Color x:Key="TextColor">#DCE8EE</Color>
    <Color x:Key="TextSecondaryColor">#B8CBD6</Color>
    <Color x:Key="TextDetail">#8FA6B4</Color>
    <Color x:Key="TextAltDetail">#E6F2F6</Color>
    <Color x:Key="TextHighlight">#BFECEF</Color>

    <!-- Secondaires / HLTB -->
    <Color x:Key="HltbAlt">#AFC3CF</Color>

    <!-- Glow principal (teal “noyé” comme ton background) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#0E2F3A</Color>

    <!-- Fond contrôles (graphite bleu nuit opaque) -->
    <Color x:Key="ControlBackgroundColor">#070E13</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="TextBrush"                  Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"               Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"         Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"            Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"               Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"        Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"             Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"         Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush"     Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play (néon contrôlé, pas “flashy”, OPAQUE) -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2FD0DA" Offset="0.00"/>
        <GradientStop Color="#15515F" Offset="0.25"/>
        <GradientStop Color="#0B1F27" Offset="0.55"/>
        <GradientStop Color="#070E13" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure focus : scan holo net mais sobre (cyan -> pétrole -> violet) -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2FD0DA" Offset="0.00"/>
        <GradientStop Color="#2A4E5E" Offset="0.55"/>
        <GradientStop Color="#9A78C8" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure non focus -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1A242C" Offset="0.00"/>
        <GradientStop Color="#11181E" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- OverlayMenu : immergé teal (pas de reflets blancs, OPAQUE) -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#123846" Offset="0.00"/>
        <GradientStop Color="#0E2F3A" Offset="0.35"/>
        <GradientStop Color="#070E13" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bord des menus (opaque) -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#9A78C8" Offset="0.00"/>
        <GradientStop Color="#9A78C8" Offset="1.00"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#FF000000" Offset="0.00"/>
        <GradientStop Color="#FF000000" Offset="0.30"/>
        <GradientStop Color="#F2000000" Offset="0.45"/>
        <GradientStop Color="#CC000000" Offset="0.60"/>
        <GradientStop Color="#80000000" Offset="0.75"/>
        <GradientStop Color="#33000000" Offset="0.90"/>
        <GradientStop Color="#00000000" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées (graphite froid translucide) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#C90C1218" Offset="0.00"/>
        <GradientStop Color="#C90C1218" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées (non focus) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#C90A0E13" Offset="0.00"/>
        <GradientStop Color="#C90A0E13" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial : halo vitre -> cyan -> teal -> nuit (plus large) -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.40" GradientOrigin="0.5,0.40"
                         RadiusX="0.90" RadiusY="0.95">
        <GradientStop Color="#15515F" Offset="0.00"/>
        <GradientStop Color="#0E2F3A" Offset="0.45"/>
        <GradientStop Color="#070E13" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
