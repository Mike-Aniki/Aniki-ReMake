<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Ghost in the Shell — OPTIC CORE+ (verre, néons, halo diffus) -->

    <sys:Int32 x:Key="BackgroundImageIndex">33</sys:Int32>

    <!-- Accents -->
    <Color x:Key="GlyphColor">#40F7FF</Color>
    <!-- cyan néon -->
    <Color x:Key="GlowFocusColor">#BDF7FF</Color>
    <!-- halo clair -->
    <Color x:Key="AccentViolet">#BE86FF</Color>
    <!-- violet + chaud -->

    <!-- Textes -->
    <Color x:Key="TextColor">#F6FBFF</Color>
    <Color x:Key="TextSecondaryColor">#D5E2EF</Color>
    <Color x:Key="TextDetail">#A8BACB</Color>
    <Color x:Key="TextAltDetail">#FFFFFFFF</Color>
    <Color x:Key="TextHighlight">#D7FFF9</Color>

    <!-- Secondaires / HLTB -->
    <Color x:Key="HltbAlt">#CBDAE6</Color>

    <!-- Glow principal (teal ops) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#134557</Color>

    <!-- Fond contrôles (noir bleuté translucide) -->
    <Color x:Key="ControlBackgroundColor">#C80B1016</Color>
    <!-- ~78% -->

    <!-- Brushes -->
    <SolidColorBrush x:Key="TextBrush"                  Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"               Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"         Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"            Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"               Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"        Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"             Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"         Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush"     Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play (verre + reflet) -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#663CF6FF" Offset="0.00"/>
        <!-- reflet vitre -->
        <GradientStop Color="#176F7C"   Offset="0.10"/>
        <GradientStop Color="#0E2732"   Offset="0.56"/>
        <GradientStop Color="#99070F14" Offset="1.00"/>
        <!-- ~60% -->
    </LinearGradientBrush>

    <!-- Bordure focus : “scan holo” (alpha fort, mix cyan/violet) -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E040F7FF" Offset="0.00"/>
        <!-- cyan vif -->
        <GradientStop Color="#80324F66" Offset="0.52"/>
        <!-- pétrole translucide -->
        <GradientStop Color="#E0BE86FF" Offset="1.00"/>
        <!-- violet chaud -->
    </LinearGradientBrush>

    <!-- Bordure non focus -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1F2A3136" Offset="0.00"/>
        <GradientStop Color="#141A2126" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- OverlayMenu : reflet -> cyan -> teal -> nuit -> bas violet (glaze) -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#22FFFFFF" Offset="0.00"/>
        <!-- micro-reflet -->
        <GradientStop Color="#663CF6FF" Offset="0.06"/>
        <!-- liseré cyan -->
        <GradientStop Color="#D0134557" Offset="0.40"/>
        <!-- teal (82%) -->
        <GradientStop Color="#EC090F14" Offset="1"/>
        <!-- nuit (93%) -->
    </LinearGradientBrush>

    <!-- Bord des menus -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#30BE86FF" Offset="0.00"/>
        <GradientStop Color="#30BE86FF" Offset="1.00"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#FF000000" Offset="0.00"/>
        <GradientStop Color="#FF000000" Offset="0.30"/>
        <GradientStop Color="#F2000000" Offset="0.45"/>
        <GradientStop Color="#CC000000" Offset="0.60"/>
        <GradientStop Color="#80000000" Offset="0.75"/>
        <GradientStop Color="#33000000" Offset="0.90"/>
        <GradientStop Color="#00000000" Offset="1.00"/>
    </LinearGradientBrush>



    <LinearGradientBrush x:Key="ShadeBottom" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#CC000000" Offset="0.00"/>
        <GradientStop Color="#66000000" Offset="0.12"/>
        <GradientStop Color="#00000000" Offset="0.28"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeLeft" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#99000000" Offset="0.00"/>
        <GradientStop Color="#44000000" Offset="0.22"/>
        <GradientStop Color="#1A000000" Offset="0.34"/>
        <GradientStop Color="#00000000" Offset="0.44"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées (graphite froid translucide) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#C90C1218" Offset="0.00"/>
        <GradientStop Color="#C90C1218" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées (non focus) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#C90A0E13" Offset="0.00"/>
        <GradientStop Color="#C90A0E13" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial : halo vitre -> cyan -> teal -> nuit (plus large) -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.40" GradientOrigin="0.5,0.40"
                         RadiusX="0.90" RadiusY="0.95">
        <GradientStop Color="#33FFFFFF" Offset="0.00"/>
        <!-- couronne blanche -->
        <GradientStop Color="#263CF6FF" Offset="0.12"/>
        <!-- cyan translucide -->
        <GradientStop Color="#134557"   Offset="0.48"/>
        <!-- teal -->
        <GradientStop Color="#080C12"   Offset="1.00"/>
        <!-- nuit -->
    </RadialGradientBrush>
</ResourceDictionary>
