<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">34</sys:Int32>

    <!-- Accent / liens (rouge sang) -->
    <Color x:Key="GlyphColor">#C12B2E</Color>
    <!-- Halo focus (crimson lumineux) -->
    <Color x:Key="GlowFocusColor">#FF6A6E</Color>

    <!-- Textes -->
    <Color x:Key="TextColor">#F2F3F5</Color>
    <Color x:Key="TextSecondaryColor">#D6D9DE</Color>
    <Color x:Key="TextDetail">#A9B0B7</Color>
    <Color x:Key="TextAltDetail">#FFFFFF</Color>
    <!-- Highlight (ivoire/ossement) -->
    <Color x:Key="TextHighlight">#E6D5B8</Color>

    <!-- Secondaires / HLTB (acier terne) -->
    <Color x:Key="HltbAlt">#B9C0C6</Color>

    <!-- Glow principal (crimson profond) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#5C0E12</Color>

    <!-- Fond contrôles (noir/graphite) -->
    <Color x:Key="ControlBackgroundColor">#0B090A</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="TextBrush"             Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"          Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"    Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"       Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"          Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"   Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"        Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"    Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play : crimson -> encre -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.06"/>
        <GradientStop Color="#151114" Offset="0.84"/>
        <GradientStop Color="#0C0A0B" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure focus : sang → acier sombre → sang -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#C12B2E" Offset="0.0" />
        <GradientStop Color="#5C0E12" Offset="0.45" />
        <GradientStop Color="#C12B2E" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bordure non focus : ardoise/acier -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2026282B" Offset="0"/>
        <GradientStop Color="#20151719" Offset="1"/>
    </LinearGradientBrush>

    <!-- OverlayMenu : rouge sang → bordeaux brûlé → nuit -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#8A151A" Offset="0.0" />
        <GradientStop Color="#3A0B0D" Offset="0.40" />
        <GradientStop Color="#0B0809" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bord des menus : ivoire/ossement → nuit -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#E6D5B8" Offset="0.0"/>
        <GradientStop Color="#0B0809" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Shades (teinte bordeaux) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.0" />
        <GradientStop Color="#60101010" Offset="0.2" />
        <GradientStop Color="#FF3A0B0D" Offset="0.45" />
        <GradientStop Color="#FF000000" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBottom" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#B3000000" Offset="0.00"/>
        <GradientStop Color="#59000000" Offset="0.10"/>
        <GradientStop Color="#00000000" Offset="0.26"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeLeft" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#99000000" Offset="0.00"/>
        <GradientStop Color="#55000000" Offset="0.20"/>
        <GradientStop Color="#22000000" Offset="0.30"/>
        <GradientStop Color="#00000000" Offset="0.40"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées (acier noir) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#111013" Offset="0.10"/>
        <GradientStop Color="#111013" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées (non focus) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#0B090A" Offset="0.00"/>
        <GradientStop Color="#0B090A" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial (marque / éclipse) -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess" Center="0.5,0.4" GradientOrigin="0.5,0.4" RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.00"/>
        <GradientStop Color="#0B0809" Offset="0.40"/>
        <GradientStop Color="#050405" Offset="1.00"/>
    </RadialGradientBrush>
</ResourceDictionary>
