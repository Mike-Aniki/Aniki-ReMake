<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">19</sys:Int32>

    <!-- Accents (liens uniquement) -->
    <Color x:Key="GlyphColor">#26B7FF</Color>

    <!-- Halo jaquette focus (neutre clair) -->
    <Color x:Key="GlowFocusColor">#E5E4E2</Color>

    <!-- Texte (thème clair gris) -->
    <Color x:Key="TextColor">#1F1F1F</Color>
    <Color x:Key="TextSecondaryColor">#2A2A2A</Color>
    <Color x:Key="TextDetail">#5A5A5A</Color>
    <Color x:Key="TextAltDetail">#1F1F1F</Color>
    <Color x:Key="HltbAlt">#7A7A7A</Color>
    <Color x:Key="TextHighlight">#BFC5CC</Color>

    <!-- Fonds -->
    <Color x:Key="ControlBackgroundColor">#A3A3A3</Color>

    <!-- Glow principal (Play & accents) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#A5A5A5</Color>

    <!-- Brushes texte / communs -->
    <SolidColorBrush x:Key="TextBrush"               Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"            Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"      Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"         Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"            Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"     Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"          Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"      Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush"  Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.10" />
        <GradientStop Color="#A3A3A3" Offset="0.90" />
    </LinearGradientBrush>

    <!-- Focus global (uni sombre pour contraste sur fond clair) -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#3A3A3A" Offset="0.0" />
        <GradientStop Color="#3A3A3A" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bordures non focus (très léger) -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2026282B" Offset="0"/>
        <GradientStop Color="#20151719" Offset="1"/>
    </LinearGradientBrush>

    <!-- *** BASE DU THEME *** -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#C8C8C8" Offset="0.0" />
        <GradientStop Color="#A3A3A3" Offset="0.40" />
        <GradientStop Color="#A5A5A5" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bord des menus / fenêtres -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#808080" Offset="0.0"/>
        <GradientStop Color="#606060" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Ombre principale (haut transparent → bas opaque) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.0" />
        <GradientStop Color="#60101010" Offset="0.20" />
        <GradientStop Color="#FFA3A3A3" Offset="0.45" />
        <GradientStop Color="#FF000000" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées (plus sombre que l’overlay) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#7A7A7A" Offset="0.10" />
        <GradientStop Color="#7A7A7A" Offset="1.00" />
    </LinearGradientBrush>

    <!-- *** TROPHÉES : légèrement PLUS SOMBRE que la base claire (vertical) *** -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#B8B8B8" Offset="0.00" />
        <GradientStop Color="#989898" Offset="1.00" />
    </LinearGradientBrush>

    <!-- Fond radial trophées -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.0" />
        <GradientStop Color="#B0B0B0" Offset="0.65" />
        <GradientStop Color="#7A7A7A" Offset="1.0" />
    </RadialGradientBrush>

</ResourceDictionary>
