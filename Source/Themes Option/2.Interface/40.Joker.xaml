<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Image index -->
    <sys:Int32 x:Key="BackgroundImageIndex">40</sys:Int32>

    <!-- ===== PALETTE (Joker Chaos) ===== -->
    <!-- Icônes / liens -->
    <Color x:Key="GlyphColor">#39FF14</Color>
    <!-- Vert toxique -->
    <!-- Halo focus -->
    <Color x:Key="GlowFocusColor">#39FF14</Color>
    <!-- Vert toxique -->
    <!-- Texte -->
    <Color x:Key="TextBaseColor">#F9FFF9</Color>
    <!-- Blanc froid -->
    <Color x:Key="TextSubtitleColor">#DAEEDA</Color>
    <Color x:Key="TextMutedColor">#9EB59E</Color>
    <!-- Surlignage “sourire sanglant” -->
    <Color x:Key="TextHighlight">#E0112B</Color>
    <!-- Rouge sang -->

    <!-- Variante HLTB / petites icônes -->
    <Color x:Key="HltbAlt">#C8FF9A</Color>
    <!-- Vert acide clair -->

    <!-- Glow principal (fond / play / halos) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#2B003F</Color>
    <!-- Violet encré -->

    <!-- ===== BRUSHES CANON ===== -->
    <SolidColorBrush x:Key="TextBrush"            Color="{DynamicResource TextBaseColor}" />
    <SolidColorBrush x:Key="TextGlowBrush"        Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="HighlightBrush"       Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBrush"         Color="{DynamicResource GlowFocusColor}" />

    <!-- Utilitaires -->
    <SolidColorBrush x:Key="HltbAltBrush"         Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailBrush"      Color="{DynamicResource TextMutedColor}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"   Color="{DynamicResource TextBaseColor}" />
    <SolidColorBrush x:Key="TextAltBrush"         Color="{DynamicResource TextSubtitleColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"  Color="{DynamicResource TextSubtitleColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"       Color="{DynamicResource GlowFocusColor}" />

    <!-- ===== BOUTON PLAY (flash → abîme) ===== -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#3B103F" Offset="0.00"/>
        <!-- flash vert -->
        <GradientStop Color="#2B003F" Offset="0.48"/>
        <!-- violet profond -->
        <GradientStop Color="#070707" Offset="1.00"/>
        <!-- noir -->
    </LinearGradientBrush>

    <!-- ===== BORDURES ===== -->
    <!-- Focus : violet → blanc “spark” → vert toxique (très agressif) -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E0112B" Offset="0.00"/>
        <GradientStop Color="#39FF14" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Non focus : vert pulsé plus visible -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#5539FF14" Offset="0.00"/>
        <GradientStop Color="#2239FF14" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- ===== OVERLAYS / MENUS ===== -->
    <!-- OverlayMenu : violet noir → neutre encré → vert très sombre -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2B003F" Offset="0.00"/>
        <!-- violet noir -->
        <GradientStop Color="#140A19" Offset="0.50"/>
        <!-- encre -->
        <GradientStop Color="#001B0A" Offset="1.00"/>
        <!-- vert très sombre -->
    </LinearGradientBrush>

    <!-- Bord des menus : rouge sourire → vert toxique -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#E0112B" Offset="0.00"/>
        <!-- rouge sang -->
        <GradientStop Color="#39FF14" Offset="1.00"/>
        <!-- vert toxique -->
    </LinearGradientBrush>

    <!-- ===== SHADES ===== -->
    <!-- Shade vertical : contraste violent, lisibilité prioritaire -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#77101010" Offset="0.22"/>
        <GradientStop Color="#DD0C0F14" Offset="0.55"/>
        <!-- froid bleuté -->
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- ===== FONDS / CARTES ===== -->
    <!-- Fenêtres non contrôlées (violet encré presque noir) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#14101F" Offset="0.10"/>
        <GradientStop Color="#14101F" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Cartes Trophées (non focus) : violet glacé dur -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#16122B" Offset="0.00"/>
        <GradientStop Color="#0F0F23" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial (Trophées/Screens/DLC/Stats) : cœur vert toxique + anneau rouge -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.45" GradientOrigin="0.5,0.45"
                         RadiusX="0.88" RadiusY="0.96">
        <GradientStop Color="#14101F" Offset="0.00"/>
        <!-- cœur vert -->
        <GradientStop Color="#2B003F" Offset="0.52"/>
        <!-- violet -->
        <GradientStop Color="#001B0A" Offset="0.78"/>
        <!-- anneau rouge translucide -->
        <GradientStop Color="#000000" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
