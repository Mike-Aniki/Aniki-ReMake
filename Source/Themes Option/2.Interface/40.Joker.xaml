<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">40</sys:Int32>

    <!-- Accent des liens html (Harley pink) -->
    <Color x:Key="GlyphColor">#E5006D</Color>

    <!-- Glow derrière les jaquettes focus (Harley blue) -->
    <Color x:Key="GlowFocusColor">#00D2FF</Color>

    <!-- Textes -->
    <Color x:Key="TextSecondaryColor">#D9E1EA</Color>
    <Color x:Key="TextDetail">#A9B6C8</Color>
    <Color x:Key="TextAltDetail">#F7FAFD</Color>
    <Color x:Key="TextHighlight">#FF007F</Color>

    <!-- Valeurs HLTB / petites icônes infos (rose clair pour varier) -->
    <Color x:Key="HltbAlt">#FFA0E6</Color>

    <!-- Glow principal (Play & fonds des vues) : cyan néon -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#3A002A</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="HltbAltBrush"        Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"  Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"     Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"        Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"      Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"  Color="{DynamicResource TextHighlight}" />

    <!-- Bouton Play : cyan -> encre -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.06"/>
        <GradientStop Color="#171C23" Offset="0.84"/>
        <GradientStop Color="#11161C" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure de focus : néon bi-chromatique (magenta -> cyan) -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E5006D" Offset="0.00"/>
        <GradientStop Color="#B3FFFFFF" Offset="0.38"/>
        <GradientStop Color="#00D2FF" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure non focus : cyan doux -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#3345EFFF" Offset="0"/>
        <GradientStop Color="#1199FFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- OverlayMenu : split Harley (magenta sombre -> cyan sombre), 100% opaque -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#3A002A" Offset="0.0"/>
        <!-- magenta sombre -->
        <GradientStop Color="#1C0F1C" Offset="0.5"/>
        <!-- centre neutre -->
        <GradientStop Color="#00182A" Offset="1.0"/>
        <!-- bleu Harley -->
    </LinearGradientBrush>

    <!-- Bord des menus : dégradé magenta -> cyan (signature Harley) -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF2B91" Offset="0.0"/>
        <GradientStop Color="#00D2FF" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Shades de haut en bas (vue verticale) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#60101010" Offset="0.20"/>
        <GradientStop Color="#FF151C24" Offset="0.45"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Shade bas (vue horizontale) -->
    <LinearGradientBrush x:Key="ShadeBottom" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#BF000000" Offset="0.00"/>
        <GradientStop Color="#59000000" Offset="0.10"/>
        <GradientStop Color="#00000000" Offset="0.26"/>
    </LinearGradientBrush>

    <!-- Shade gauche (vue horizontale) -->
    <LinearGradientBrush x:Key="ShadeLeft" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#A6000000" Offset="0.00"/>
        <GradientStop Color="#66000000" Offset="0.20"/>
        <GradientStop Color="#22000000" Offset="0.30"/>
        <GradientStop Color="#00000000" Offset="0.40"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées (encre homogène) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#141A21" Offset="0.10"/>
        <GradientStop Color="#141A21" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Cartes Trophées (non focus) : encre froide -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#151C23" Offset="0.00"/>
        <GradientStop Color="#0F141B" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial (Trophées, Screenshots, DLC, Stats) -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.00"/>
        <GradientStop Color="#00182A" Offset="0.70"/>
        <GradientStop Color="#000000" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
