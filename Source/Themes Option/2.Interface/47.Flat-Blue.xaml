<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">47</sys:Int32>

    <!-- Accent -->
    <Color x:Key="GlyphColor">#8EC5FF</Color>

    <!-- Halo focus -->
    <Color x:Key="GlowFocusColor">#FFFFFF</Color>

    <!-- Texte -->
    <Color x:Key="TextColor">#F7F9FF</Color>
    <Color x:Key="TextSecondaryColor">#EAF0FF</Color>
    <Color x:Key="TextDetail">#C7D2E8</Color>
    <Color x:Key="TextAltDetail">#EAF0FF</Color>
    <Color x:Key="HltbAlt">#C7D2E8</Color>
    <Color x:Key="TextHighlight">#DDE9FF</Color>

    <!-- Fonds (base flat) -->
    <Color x:Key="ControlBackgroundColor">#2A5FDB</Color>
    <Color x:Key="DynamicGlowBackgroundPrimary">#234FC0</Color>

    <!-- Brushes texte / communs -->
    <SolidColorBrush x:Key="TextBrush"               Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"            Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"      Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"         Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"            Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"     Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"          Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"      Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush"  Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2A5FDB" Offset="0.10" />
        <GradientStop Color="#2A5FDB" Offset="0.90" />
    </LinearGradientBrush>

    <!-- Focus global -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0.0" />
        <GradientStop Color="#FFFFFF" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bordures non focus -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#202A5FDB" Offset="0"/>
        <GradientStop Color="#202A5FDB" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonDetailsColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2A5FDB" Offset="0.00"/>
        <GradientStop Color="#2A5FDB" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Overlay -->
    <LinearGradientBrush x:Key="GlassMainBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2A5FDB" Offset="0.00"/>
        <GradientStop Color="#2A5FDB" Offset="0.55"/>
        <GradientStop Color="#2A5FDB" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Liseré interne doux -->
    <SolidColorBrush x:Key="GlassInnerLineBrush" Color="#1F46AA"/>

    <!-- Base du thème -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2A5FDB" Offset="0.0" />
        <GradientStop Color="#2A5FDB" Offset="0.40" />
        <GradientStop Color="#2A5FDB" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bord des menus -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFFFF" Offset="0.0"/>
        <GradientStop Color="#C7D2E8" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonBackgroundNoFocus" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>

    <!-- Ombre -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.0" />
        <GradientStop Color="#602A5FDB" Offset="0.20" />
        <GradientStop Color="#FF2A5FDB" Offset="0.45" />
        <GradientStop Color="#FF000000" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#1F46AA" Offset="0.10" />
        <GradientStop Color="#1F46AA" Offset="1.00" />
    </LinearGradientBrush>

    <!-- Trophées : légèrement plus sombre -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#234FC0" Offset="0.00" />
        <GradientStop Color="#234FC0" Offset="1.00" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.0" />
        <GradientStop Color="#1F46AA" Offset="0.65" />
        <GradientStop Color="#000000" Offset="1.0" />
    </RadialGradientBrush>

</ResourceDictionary>
