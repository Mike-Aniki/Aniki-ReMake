<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">13</sys:Int32>

    <!-- Ta base (ajustée/complétée) -->
    <Color x:Key="GlyphColor">#26B7FF</Color>
    <!-- liens texte uniquement -->
    <Color x:Key="BorderDark">#8E8E8E</Color>
    <Color x:Key="BorderLight">#F2F2F2</Color>
    <Color x:Key="SelectionLightColor">#E5E4E2</Color>

    <!-- Fonds -->
    <Color x:Key="ControlBackgroundColor">#6A6A6A</Color>
    <Color x:Key="ControlBackgroundColorDark">#3A3A3A</Color>

    <!-- Texte -->
    <Color x:Key="TextColor">#F2F3F5</Color>
    <Color x:Key="TextSecondaryColor">#E5E4E2</Color>
    <Color x:Key="TextDetail">#B8B8B8</Color>
    <Color x:Key="TextAltDetail">#E5E4E2</Color>
    <Color x:Key="HltbAlt">#9C9C9C</Color>
    <Color x:Key="TextHighlight">#DFE1E4</Color>

    <!-- Glow jaquettes / bouton Play -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#9E9E9E</Color>
    <Color x:Key="GlowFocusColor">#A0A0A0</Color>
    <!-- glow neutre froid -->

    <!-- Brushes texte / communs -->
    <SolidColorBrush x:Key="TextBrush"              Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"           Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"     Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"        Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"           Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"    Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"         Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"     Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.10"/>
        <GradientStop Color="#6A6A6A" Offset="0.90"/>
    </LinearGradientBrush>

    <!-- Focus global (neutre, 3 stops) -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#E0E0E0" Offset="0.00"/>
        <GradientStop Color="#FFFFFF" Offset="0.50"/>
        <GradientStop Color="#C8C8C8" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordures non focus (subtiles) -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2026282B" Offset="0.00"/>
        <GradientStop Color="#20151719" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Base du thème -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#B3B3B3" Offset="0.00"/>
        <GradientStop Color="#9E9E9E" Offset="0.40"/>
        <GradientStop Color="#5E5E5E" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordures menus / fenêtres -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#E4E6E8" Offset="0.00"/>
        <GradientStop Color="#5E5E5E" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Ombre principale (bas opaque -> haut transparent) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#60101010" Offset="0.20"/>
        <GradientStop Color="#FF6A6A6A" Offset="0.45"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées (plus sombre que l’overlay) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#2A2A2A" Offset="0.10"/>
        <GradientStop Color="#2A2A2A" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Cartes trophées (vertical, légèrement plus clair que l’overlay) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#7A7A7A" Offset="0.00"/>
        <GradientStop Color="#5E5E5E" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fond radial trophées (centre doux, pas trop lumineux) -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="#B0B0B0" Offset="0.00"/>
        <GradientStop Color="#6A6A6A" Offset="0.55"/>
        <GradientStop Color="#0E0E0E" Offset="1.00"/>
    </RadialGradientBrush>

    <!-- Style existant conservé -->
    <Style x:Key="TextThemeOptionStyle" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBaseStyle}">
        <Setter Property="FontSize" Value="34" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="Segoe UI Black Italic" />
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0" />
                    <GradientStop Color="#B0B3B8" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Direction="320" />
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
