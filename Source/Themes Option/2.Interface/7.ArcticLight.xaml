<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">7</sys:Int32>

    <!-- Accent & focus -->
    <Color x:Key="GlyphColor">#26B7FF</Color>
    <Color x:Key="GlowFocusColor">#A6E4FF</Color>

    <!-- Textes -->
    <Color x:Key="TextColor">#3A3A3A</Color>
    <Color x:Key="TextSecondaryColor">#3A3A3A</Color>
    <Color x:Key="TextDetail">#4A4A4A</Color>
    <Color x:Key="TextAltDetail">#3A3A3A</Color>
    <Color x:Key="HltbAlt">#7A7A7A</Color>

    <!-- Fonds -->
    <Color x:Key="ControlBackgroundColor">#EAEAEA</Color>

    <!-- Titre / Highlight -->
    <Color x:Key="TextHighlight">#B0B3B8</Color>

    <!-- Brushes texte et communs -->
    <SolidColorBrush x:Key="TextBrush"              Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"           Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"     Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"        Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"           Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"    Color="#D0D0D0" />
    <SolidColorBrush x:Key="GlowFocusBrush"         Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"     Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#DCDCDC" Offset="0.10"/>
        <GradientStop Color="#BEBEBE" Offset="0.90"/>
    </LinearGradientBrush>

    <!-- Bordure focus (discrète mais visible sur fond clair) -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#909090" Offset="0.00"/>
        <GradientStop Color="#5E5E5E" Offset="0.50"/>
        <GradientStop Color="#3A3A3A" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordures boutons non focus -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#201A1B1E" Offset="0"/>
        <GradientStop Color="#201A1B1E" Offset="1"/>
    </LinearGradientBrush>

    <!-- Base du thème clair -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFEAEAEA" Offset="0.00"/>
        <GradientStop Color="#FFEAEAEA" Offset="0.40"/>
        <GradientStop Color="#FFDCDCDC" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordures de menu / fenêtre -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#803A3A3A" Offset="0.00"/>
        <GradientStop Color="#40FFFFFF" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Ombre générale (structure standard adaptée au clair) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00FFFFFF" Offset="0.00"/>
        <GradientStop Color="#20666666" Offset="0.20"/>
        <GradientStop Color="#FFEAEAEA" Offset="0.45"/>
        <GradientStop Color="#FFCACACA" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlables (fond sombre neutre pour contraste) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#FF1E1E1E" Offset="0.10"/>
        <GradientStop Color="#FF1E1E1E" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fonds des cartes de trophées (plus sombre que le fond clair) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#D8D8D8" Offset="0.00"/>
        <GradientStop Color="#C4C4C4" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fond radial trophées (centre doux, teinte argentée) -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="#E0E0E0" Offset="0.00"/>
        <GradientStop Color="#D0D0D0" Offset="0.55"/>
        <GradientStop Color="#B5B5B5" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
