<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Boolean x:Key="DynamicAutoEnabled">True</sys:Boolean>
    <sys:Int32 x:Key="BackgroundImageIndex">99</sys:Int32>

    <!-- Accents & textes -->
    <Color x:Key="GlyphColor">#32C5FF</Color>
    <Color x:Key="GlowFocusColor">#e5e4e2</Color>
    <Color x:Key="TextColor">#F6F6F6</Color>
    <Color x:Key="TextSecondaryColor">#e5e4e2</Color>
    <Color x:Key="TextDetail">#888481</Color>
    <Color x:Key="TextAltDetail">#e5e4e2</Color>
    <Color x:Key="TextHighlight">#FFD97A</Color>
    <Color x:Key="HltbAlt">#888481</Color>

    <!-- Glow / Accent principal -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#0A1522</Color>

    <!-- Overlay -->
    <Color x:Key="OverlayStart">#1A2230</Color>
    <Color x:Key="OverlayMid">#0A1522</Color>
    <Color x:Key="OverlayEnd">#0A1522</Color>

    <!-- Bouton Play -->
    <Color x:Key="ButtonPlayMid">#1A2230</Color>
    <Color x:Key="ButtonPlayEnd">#101826</Color>

    <!-- Focus border  -->
    <Color x:Key="FocusStart">#E0E0E0</Color>
    <Color x:Key="FocusMid">#E0E0E0</Color>
    <Color x:Key="FocusEnd">#E0E0E0</Color>

    <!-- Menu border -->
    <Color x:Key="MenuBorderStart">#70FFFFFF</Color>
    <Color x:Key="MenuBorderEnd">#70FFFFFF</Color>

    <!-- No focus border -->
    <Color x:Key="NoFocusStart">#3A4554</Color>
    <Color x:Key="NoFocusEnd">#222A36</Color>

    <!-- Shades / Success / Glow radial -->
    <Color x:Key="ShadeMidColor">#80000000</Color>
    <Color x:Key="ShadeEndColor">#FF000000</Color>
    <Color x:Key="ControlBackgroundColor">#0E141E</Color>
    <Color x:Key="SuccessStartColor">#121A26</Color>
    <Color x:Key="GlowMidColor">#070B12</Color>
    <Color x:Key="GlowEndColor">#070B12</Color>

    <!-- Textes / Détails -->
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush" Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"  Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush" Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush" Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush" Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush" Color="{DynamicResource TextHighlight}" />

    <!-- Overlay principal -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource OverlayStart}" Offset="0.00"/>
        <GradientStop Color="{DynamicResource OverlayMid}"   Offset="0.45"/>
        <GradientStop Color="{DynamicResource OverlayEnd}"   Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bouton Play -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.06"/>
        <GradientStop Color="{DynamicResource ButtonPlayMid}" Offset="0.84"/>
        <GradientStop Color="{DynamicResource ButtonPlayEnd}" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Focus / No focus / Menu border -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource FocusStart}" Offset="0.00"/>
        <GradientStop Color="{DynamicResource FocusMid}"   Offset="0.45"/>
        <GradientStop Color="{DynamicResource FocusEnd}"   Offset="1.00"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource NoFocusStart}" Offset="0"/>
        <GradientStop Color="{DynamicResource NoFocusEnd}"   Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{DynamicResource MenuBorderStart}" Offset="0.0"/>
        <GradientStop Color="{DynamicResource MenuBorderEnd}"   Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Shades -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.15"/>
        <GradientStop Color="{DynamicResource ShadeMidColor}" Offset="0.30"/>
        <GradientStop Color="{DynamicResource ShadeEndColor}" Offset="0.45"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="{DynamicResource ControlBackgroundColor}" Offset="0.10"/>
        <GradientStop Color="{DynamicResource ControlBackgroundColor}" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées (non focus) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="{DynamicResource SuccessStartColor}"       Offset="0.00"/>
        <GradientStop Color="{DynamicResource ControlBackgroundColor}"  Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4" RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.00"/>
        <GradientStop Color="{DynamicResource GlowMidColor}" Offset="0.70"/>
        <GradientStop Color="{DynamicResource GlowEndColor}" Offset="1.00"/>
    </RadialGradientBrush>



</ResourceDictionary>
