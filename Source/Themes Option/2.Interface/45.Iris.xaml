<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">44</sys:Int32>

    <!-- ===== DREAMCAST OS PALETTE (blue UI + plastic whites) ===== -->

    <!-- Accent principal (UI Blue) -->
    <Color x:Key="GlyphColor">#4FA9F5</Color>

    <!-- Halo focus (plastic glow) -->
    <Color x:Key="GlowFocusColor">#4FA9F5</Color>

    <!-- Textes (pas noir, bleu très foncé) -->
    <Color x:Key="TextColor">#E9EEF3</Color>
    <Color x:Key="TextSecondaryColor">#3A4A5A</Color>
    <Color x:Key="TextDetail">#E9EEF3</Color>
    <Color x:Key="TextAltDetail">#E9EEF3</Color>
    <Color x:Key="TextColorDark">#1E2A36</Color>

    <!-- Highlight secondaire (bleu plus clair UI) -->
    <Color x:Key="HltbAlt">#5BB3F8</Color>

    <!-- Fond principal (gris bleuté clair, pas blanc pur) -->
    <Color x:Key="ControlBackgroundColor">#E9EEF3</Color>

    <!-- Texte highlight -->
    <Color x:Key="TextHighlight">#1E2A36</Color>

    <!-- HUB / cartes -->
    <Color x:Key="BorderBrushAH">#C7D3DE</Color>
    <Color x:Key="BackgroundAH">#903E8FD8</Color>
    <Color x:Key="HubBottomBanner">#C7D3DE</Color>
    <Color x:Key="CardStat">#519ADC</Color>

    <!-- Bordure carte (UI blue) -->
    <Color x:Key="CardBorder">#E9EEF3</Color>

    <Color x:Key="BadgeTrophée">#3E8FD8</Color>

    <Color x:Key="ColorBottomBarOtherView">#519ADC</Color>



    <!-- Accent secondaire -->
    <Color x:Key="Accent">#E9EEF3</Color>
    <Color x:Key="BackgroundAHDark">#3E8FD8</Color>

    <!-- ===== BRUSHES ===== -->
    <SolidColorBrush x:Key="TextBrush"              Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"           Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"     Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"        Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"           Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"    Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"         Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"     Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />

    <SolidColorBrush x:Key="BorderBrushAHBrush"      Color="{DynamicResource BorderBrushAH}" />
    <SolidColorBrush x:Key="BackgroundAHBrush"       Color="{DynamicResource BackgroundAH}" />
    <SolidColorBrush x:Key="HubBottomBannerBrush"    Color="{DynamicResource HubBottomBanner}" />
    <SolidColorBrush x:Key="CardStatBrush"           Color="{DynamicResource CardStat}" />
    <SolidColorBrush x:Key="CardBorderBrush"         Color="{DynamicResource CardBorder}" />
    <SolidColorBrush x:Key="AccentBrush"             Color="{DynamicResource Accent}" />
    <SolidColorBrush x:Key="BackgroundAHDarkBrush"   Color="{DynamicResource BackgroundAHDark}" />
    <SolidColorBrush x:Key="BadgeTrophéeBrush"   Color="{DynamicResource BadgeTrophée}" />
    <SolidColorBrush x:Key="ColorBottomBarOtherViewBrush"   Color="{DynamicResource ColorBottomBarOtherView}" />
    <SolidColorBrush x:Key="TextColorDarkBrush"              Color="{DynamicResource TextColorDark}" />

    <!-- ===== BOUTONS ===== -->

    <!-- Bouton Play : bleu clair -> bleu ombre -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#5BB3F8" Offset="0.00"/>
        <GradientStop Color="#4FA9F5" Offset="0.55"/>
        <GradientStop Color="#3E8FD8" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bouton Détails : bleu ombre uniforme (moins “call to action”) -->
    <LinearGradientBrush x:Key="ButtonDetailsColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#3E8FD8" Offset="0.00"/>
        <GradientStop Color="#3E8FD8" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Focus jaquette : glow -> bleu -> glow -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0.00"/>
        <GradientStop Color="#FFFFFF" Offset="0.55"/>
        <GradientStop Color="#FFFFFF" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordures boutons non focus : gris bleuté -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#20C7D3DE" Offset="0"/>
        <GradientStop Color="#20AEBCCC" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonBackgroundNoFocus" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>


    <!-- ===== MENUS ===== -->

    <LinearGradientBrush x:Key="GlassWindowBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#20FFFFFF" Offset="0.00"/>
        <GradientStop Color="#10FFFFFF" Offset="0.50"/>
        <GradientStop Color="#00000000" Offset="1.00"/>
    </LinearGradientBrush>


    <!-- Overlay menu : bleu UI (comme ta barre du haut) -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#5BB3F8" Offset="0.00" />
        <GradientStop Color="#4FA9F5" Offset="0.55" />
        <GradientStop Color="#1E7FD1" Offset="1.00" />
    </LinearGradientBrush>

    <!-- Bordure menus : plastique -> bleu -> plastique -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#F4F7FA" Offset="0.00"/>
        <GradientStop Color="#FFFFFF" Offset="0.55"/>
        <GradientStop Color="#F4F7FA" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- ===== SHADES (blanc/gris bleuté, pas cyan) ===== -->

    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#70FFFFFF" Offset="0.45"/>
        <GradientStop Color="#FFFFFF" Offset="0.70"/>
        <GradientStop Color="#FFFFFF" Offset="1.00"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBackgroundDetails" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#F0F4F7FA" Offset="0.00"/>
        <GradientStop Color="#90E9EEF3" Offset="0.22"/>
        <GradientStop Color="#44DCE3EA" Offset="0.35"/>
        <GradientStop Color="#00000000" Offset="0.55"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBottom" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#F0F4F7FA" Offset="0.00"/>
        <GradientStop Color="#90E9EEF3" Offset="0.10"/>
        <GradientStop Color="#50DCE3EA" Offset="0.22"/>
        <GradientStop Color="#20DCE3EA" Offset="0.35"/>
        <GradientStop Color="#00000000" Offset="0.55"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeTop" StartPoint="1,0" EndPoint="0,0">
        <GradientStop Color="#90E9EEF3" Offset="0.00"/>
        <GradientStop Color="#50DCE3EA" Offset="0.05"/>
        <GradientStop Color="#20DCE3EA" Offset="0.15"/>
        <GradientStop Color="#00000000" Offset="0.25"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeLeft" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#F4F7FA" Offset="0.0"/>
        <GradientStop Color="#00000000" Offset="0.55"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlables -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#D5DEE7" Offset="0.10"/>
        <GradientStop Color="#D5DEE7" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées : bleu OS profond -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#4FA9F5" Offset="0.00"/>
        <GradientStop Color="#3E8FD8" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées : bleu OS profond -->
    <LinearGradientBrush x:Key="SuccessMainBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#204FA9F5" Offset="0.00"/>
        <GradientStop Color="#203E8FD8" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow succès -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4"
                         GradientOrigin="0.5,0.4"
                         RadiusX="0.8"
                         RadiusY="0.9">
        <GradientStop Color="#D5DEE7" Offset="0.00"/>
        <GradientStop Color="#D5DEE7" Offset="0.55"/>
        <GradientStop Color="#D5DEE7" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
