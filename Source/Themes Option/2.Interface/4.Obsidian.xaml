<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">4</sys:Int32>

    <!-- Accent liens (neutre froid) -->
    <Color x:Key="GlyphColor">#5CAFFF</Color>

    <!-- Glow focus jaquette (thème sombre neutre) -->
    <Color x:Key="GlowFocusColor">#E5E4E2</Color>

    <!-- Textes -->
    <Color x:Key="TextColor">#F2F3F5</Color>
    <Color x:Key="TextSecondaryColor">#E5E4E2</Color>
    <Color x:Key="TextDetail">#9A9A9A</Color>
    <Color x:Key="TextAltDetail">#FFFFFF</Color>
    <Color x:Key="TextHighlight">#C8D2E8</Color>

    <!-- Infos secondaires -->
    <Color x:Key="HltbAlt">#9CA3AF</Color>

    <!-- Fonds -->
    <Color x:Key="ControlBackgroundColor">#0C0C0C</Color>
    <Color x:Key="DynamicGlowBackgroundPrimary">#2A2A2A</Color>

    <!-- Brushes texte et communs -->
    <SolidColorBrush x:Key="TextBrush"               Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"            Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"      Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"         Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"            Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"     Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"          Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"      Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush"  Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2A2A2A" Offset="0.10" />
        <GradientStop Color="#0C0C0C" Offset="0.90" />
    </LinearGradientBrush>

    <!-- Focus global (uni, argent froid) -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#C8D2E8" Offset="0.0" />
        <GradientStop Color="#C8D2E8" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bordures non focus (très légères) -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2026282B" Offset="0"/>
        <GradientStop Color="#20151719" Offset="1"/>
    </LinearGradientBrush>

    <!-- BASE DU THEME -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1A1A1A" Offset="0.0" />
        <GradientStop Color="#0C0C0C" Offset="0.40" />
        <GradientStop Color="#000000" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bord de menus -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#C8D2E8" Offset="0.0"/>
        <GradientStop Color="#0C0C0C" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Ombre générale (top transparent -> bas opaque noir, teinte thème au 3e stop) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.0" />
        <GradientStop Color="#60101010" Offset="0.20" />
        <GradientStop Color="#FF0C0C0C" Offset="0.45" />
        <GradientStop Color="#FF000000" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées (plus sombre de la base) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#050505" Offset="0.10"/>
        <GradientStop Color="#050505" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées : légèrement plus lumineux que la base, vertical -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#161616" Offset="0.00"/>
        <GradientStop Color="#0E0E0E" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial trophées -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="#2A2A2A" Offset="0.00"/>
        <GradientStop Color="#111111" Offset="0.70"/>
        <GradientStop Color="#050505" Offset="1.00"/>
    </RadialGradientBrush>
</ResourceDictionary>
