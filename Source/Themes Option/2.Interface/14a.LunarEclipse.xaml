<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">


    <sys:Int32 x:Key="BackgroundImageIndex">1</sys:Int32>

    <!-- Accent (liens HTML uniquement) -->
    <Color x:Key="GlyphColor">#B87333</Color>

    <!-- Halo derrière la jaquette focus -->
    <Color x:Key="GlowFocusColor">#C29568</Color>

    <!-- Texte -->
    <Color x:Key="TextColor">#F2F3F5</Color>
    <Color x:Key="TextSecondaryColor">#D6D9DE</Color>
    <Color x:Key="TextDetail">#A9AAA9</Color>
    <Color x:Key="TextAltDetail">#FFFFFF</Color>
    <Color x:Key="TextHighlight">#EBCB8B</Color>

    <!-- HLTB / infos secondaires -->
    <Color x:Key="HltbAlt">#D4B088</Color>

    <!-- Glow principal (Play / teinte globale) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#8B5A2B</Color>

    <!-- Brushes texte -->
    <SolidColorBrush x:Key="TextBrush"           Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"        Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"  Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"     Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"        Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"      Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"  Color="{DynamicResource TextHighlight}" />

    <!-- Fond contrôles -->
    <Color x:Key="ControlBackgroundColor">#12100E</Color>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play : cuivre -> anthracite (contrasté) -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#A66A3A" Offset="0.10"/>
        <GradientStop Color="#151311" Offset="0.90"/>
    </LinearGradientBrush>

    <!-- Bordure focus (style PS5 net, métallique) -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFF0D8" Offset="0.00"/>
        <GradientStop Color="#E0B37A" Offset="0.50"/>
        <GradientStop Color="#A66A3A" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordures non focus : très léger, discret -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#202A241E" Offset="0"/>
        <GradientStop Color="#101A140F" Offset="1"/>
    </LinearGradientBrush>

    <!-- *** BASE DU THÈME (Overlay opaque, très sombre, souffle cuivre) *** -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1A1410" Offset="0.00"/>
        <GradientStop Color="#14100D" Offset="0.35"/>
        <GradientStop Color="#0F0C0A" Offset="0.70"/>
        <GradientStop Color="#0B0908" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure menus : cuivre brossé -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#C98852" Offset="0.0"/>
        <GradientStop Color="#8B5A2B" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Ombre verticale (haut transparent -> bas noir, teinte cuivre au milieu) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.0"/>
        <GradientStop Color="#60101010" Offset="0.20"/>
        <GradientStop Color="#FF2A1D12" Offset="0.45"/>
        <GradientStop Color="#FF000000" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées : anthracite homogène (la plus sombre de l’overlay) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#0F0C0A" Offset="0.10"/>
        <GradientStop Color="#0F0C0A" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Cartes trophées : un ton PLUS LUMINEUX que la base sombre (vertical) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#16120F" Offset="0.00"/>
        <GradientStop Color="#120F0D" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial trophées : cuivre doux -> encre -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="#C29568" Offset="0.00"/>
        <GradientStop Color="#1A1511" Offset="0.70"/>
        <GradientStop Color="#080605" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
