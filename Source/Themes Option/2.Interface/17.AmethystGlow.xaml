<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">17</sys:Int32>

    <!-- Accents / liens (utilisé uniquement dans le texte) -->
    <Color x:Key="GlyphColor">#FF7AAE</Color>

    <!-- Lueur jaquettes focus (pas trop lumineuse) -->
    <Color x:Key="GlowFocusColor">#FF9AC8</Color>

    <!-- Texte -->
    <Color x:Key="TextColor">#F6F6F6</Color>
    <Color x:Key="TextSecondaryColor">#EDE5EC</Color>
    <Color x:Key="TextDetail">#CBB9C9</Color>
    <Color x:Key="TextAltDetail">#FFFFFF</Color>
    <Color x:Key="TextHighlight">#F8D1A1</Color>
    <Color x:Key="HltbAlt">#FFC9E6</Color>

    <!-- Fonds -->
    <Color x:Key="ControlBackgroundColor">#231326</Color>

    <!-- Glow principal (Play & fonds vues) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#B84ECF</Color>

    <!-- Brushes texte / communs -->
    <SolidColorBrush x:Key="TextBrush"               Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"            Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"      Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"         Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"            Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"     Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"          Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"      Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush"  Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play : lilas néon -> indigo nuit -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.06"/>
        <GradientStop Color="#2A2E42" Offset="0.84"/>
        <GradientStop Color="#21263A" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Focus global : blush -> blanc nacré modéré -> lilas -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF7AAE" Offset="0.00"/>
        <GradientStop Color="#F2ECF8" Offset="0.50"/>
        <GradientStop Color="#E36BFF" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure non focus : très léger -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2026282B" Offset="0"/>
        <GradientStop Color="#20151719" Offset="1"/>
    </LinearGradientBrush>

    <!-- *** BASE DU THÈME *** -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#BF60D4" Offset="0.00"/>
        <GradientStop Color="#B84ECF" Offset="0.35"/>
        <GradientStop Color="#882A89" Offset="0.70"/>
        <GradientStop Color="#231326" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bord des menus : rose -> fuchsia -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF7AAE" Offset="0.0"/>
        <GradientStop Color="#B84ECF" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Ombre principale (haut transparent → bas opaque, teinte améthyste) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#60101010" Offset="0.20"/>
        <GradientStop Color="#FF2A1E34" Offset="0.45"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#232036" Offset="0.10"/>
        <GradientStop Color="#232036" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Cartes trophées (vertical, légèrement plus clair que l’overlay bas) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2F1A36" Offset="0.00"/>
        <GradientStop Color="#231D33" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial trophées : lilas néon -> prune -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.00"/>
        <GradientStop Color="#2F2239" Offset="0.70"/>
        <GradientStop Color="#120E15" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
