<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">20</sys:Int32>

    <!-- Accent / liens (orange curseur FF8) -->
    <Color x:Key="GlyphColor">#F2A100</Color>

    <!-- Halo focus (ambre clair) — AJUSTÉ (légère désaturation/assombrissement) -->
    <Color x:Key="GlowFocusColor">#E5C36A</Color>

    <!-- Textes -->
    <Color x:Key="TextColor">#F2F5F8</Color>
    <Color x:Key="TextSecondaryColor">#DEE4EC</Color>
    <Color x:Key="TextDetail">#AEB9C6</Color>
    <Color x:Key="TextAltDetail">#FFFFFF</Color>
    <!-- Surlignage (orange doux, lisible) -->
    <Color x:Key="TextHighlight">#FFC36A</Color>

    <!-- Secondaires / HLTB (acier bleuté) -->
    <Color x:Key="HltbAlt">#C2CFDB</Color>

    <!-- Glow principal (bleu ardoise FF8) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#274058</Color>

    <!-- Fond contrôles (graphite bleu nuit) -->
    <Color x:Key="ControlBackgroundColor">#101821</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="TextBrush"              Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"           Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"     Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"        Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"           Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"    Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"         Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"     Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play : bleu ardoise → nuit -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.06"/>
        <GradientStop Color="#0F1822" Offset="0.84"/>
        <GradientStop Color="#0A1219" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure focus : orange curseur → acier bleu -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F2A100" Offset="0.0" />
        <GradientStop Color="#90F2A100" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bordure non focus : ardoise froide -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#20262B33" Offset="0"/>
        <GradientStop Color="#20141A22" Offset="1"/>
    </LinearGradientBrush>

    <!-- OverlayMenu : bleu FF8 (UI) -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#3A4E6A" Offset="0.0" />
        <GradientStop Color="#203449" Offset="0.40" />
        <GradientStop Color="#0F1A26" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bord des menus : orange → liseré argenté → bleu nuit — AJUSTÉ -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#80F2A100" Offset="0.00"/>
        <GradientStop Color="#80F2A100" Offset="0.55"/>
        <!-- liseré métallique/argenté -->
        <GradientStop Color="#80F2A100" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Shades (teinte ardoise) — AJUSTÉ : plus bleuté et progressif en bas -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#60101010" Offset="0.20"/>
        <!-- ancien #FF203449 à 0.45 → plus froid/bleu ardoise -->
        <GradientStop Color="#FF1A2C3E" Offset="0.45"/>
        <!-- lissage avant le pied noir (évite la démarcation) -->
        <GradientStop Color="#FF0C141D" Offset="0.75"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBottom" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#B3000000" Offset="0.00"/>
        <GradientStop Color="#59000000" Offset="0.10"/>
        <GradientStop Color="#00000000" Offset="0.26"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeLeft" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#99000000" Offset="0.00"/>
        <GradientStop Color="#55000000" Offset="0.20"/>
        <GradientStop Color="#22000000" Offset="0.30"/>
        <GradientStop Color="#00000000" Offset="0.40"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées (graphite bleu) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#0D141B" Offset="0.10"/>
        <GradientStop Color="#0D141B" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées (non focus) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#101821" Offset="0.00"/>
        <GradientStop Color="#101821" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial (lueur bleue UI) -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess" Center="0.5,0.4" GradientOrigin="0.5,0.4" RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.00"/>
        <GradientStop Color="#0F1A26" Offset="0.40"/>
        <GradientStop Color="#070D13" Offset="1.00"/>
    </RadialGradientBrush>
</ResourceDictionary>
