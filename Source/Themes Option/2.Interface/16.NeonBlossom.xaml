<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">16</sys:Int32>

    <!-- Accents (liens uniquement) -->
    <Color x:Key="GlyphColor">#FF7BC8</Color>

    <!-- Halo jaquettes focus (turquoise candy, pas trop fort) -->
    <Color x:Key="GlowFocusColor">#8EF3FF</Color>

    <!-- Texte -->
    <Color x:Key="TextColor">#F6F6F6</Color>
    <Color x:Key="TextSecondaryColor">#D9D3E6</Color>
    <Color x:Key="TextDetail">#AFA6C6</Color>
    <Color x:Key="TextAltDetail">#F7F4FF</Color>
    <Color x:Key="TextHighlight">#A6E8FF</Color>
    <Color x:Key="HltbAlt">#FFC9F7</Color>

    <!-- Fonds -->
    <Color x:Key="ControlBackgroundColor">#20263A</Color>

    <!-- Glow principal (Play & fonds) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#4E3E5A</Color>

    <!-- Brushes texte / communs -->
    <SolidColorBrush x:Key="TextBrush"               Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"            Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"      Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"         Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"            Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"     Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"          Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"      Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush"  Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play : lilac néon -> indigo nuit -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.06"/>
        <GradientStop Color="#2A2F45" Offset="0.84"/>
        <GradientStop Color="#22283A" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Focus global (néon doux, maîtrisé) -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF7BC8" Offset="0.00"/>
        <GradientStop Color="#EAFBFF" Offset="0.50"/>
        <GradientStop Color="#8EF3FF" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordures non focus (subtiles, neutres) -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2026282B" Offset="0"/>
        <GradientStop Color="#20151719" Offset="1"/>
    </LinearGradientBrush>

    <!-- *** BASE DU THEME *** -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#3A2948" Offset="0.00"/>
        <GradientStop Color="#2E2742" Offset="0.35"/>
        <GradientStop Color="#262C44" Offset="0.70"/>
        <GradientStop Color="#20263A" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bord des menus : signature rose → turquoise -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF7BC8" Offset="0.0"/>
        <GradientStop Color="#8EF3FF" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Ombre principale (haut transparent → bas opaque) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#60101010" Offset="0.20"/>
        <GradientStop Color="#FF20263A" Offset="0.45"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées : indigo homogène -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#232033" Offset="0.10"/>
        <GradientStop Color="#232033" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Cartes Trophées (vertical, légèrement plus clair que l’overlay) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2C2A3F" Offset="0.00"/>
        <GradientStop Color="#21263A" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial : lilac néon -> indigo -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.00"/>
        <GradientStop Color="#2B2A40" Offset="0.70"/>
        <GradientStop Color="#0E121A" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
