<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">44</sys:Int32>

    <!-- Accents (liens uniquement) – Or GOTY -->
    <Color x:Key="GlyphColor">#F0D08A</Color>

    <!-- Halo jaquette focus (or clair, doux mais bien visible) -->
    <Color x:Key="GlowFocusColor">#F7E6C7</Color>
    <!-- Texte (ivoire chaud) -->
    <Color x:Key="TextColor">#F8F4EC</Color>
    <Color x:Key="TextSecondaryColor">#DCCFBA</Color>
    <Color x:Key="TextDetail">#9C8A72</Color>
    <Color x:Key="TextAltDetail">#DCCFBA</Color>
    <Color x:Key="HltbAlt">#9C8A72</Color>

    <!-- Highlight doré plus vif (pour que le GOTY pète) -->
    <Color x:Key="TextHighlight">#FFE8A8</Color>

    <!-- Clair Obscur Expedition 33 GOTY – Couleurs adaptées (opacité conservée) -->
    <!-- Bordure légère dans les panneaux HUB (or très discret) -->
    <Color x:Key="BorderBrushAH">#44F4DFA8</Color>

    <!-- Fond HUB clair/obscur : noir bleuté, translucide -->
    <Color x:Key="BackgroundAH">#44101520</Color>

    <!-- Bandeau bas HUB – sombre, léger violet / bordeaux -->
    <Color x:Key="HubBottomBanner">#90231D22</Color>

    <!-- Fond statistique très discret -->
    <Color x:Key="CardStat">#050A0F16</Color>

    <!-- Bordure des cartes – or GOTY clair -->
    <Color x:Key="CardBorder">#F9E2A9</Color>

    <!-- Accent secondaire (complément bleu glacial) -->
    <Color x:Key="Accent">#8826B7FF</Color>

    <!-- Variante plus sombre des panneaux HUB -->
    <Color x:Key="BackgroundAHDark">#66101520</Color>

    <!-- Fonds généraux -->
    <!-- Noir profond légèrement bordeaux (fond général) -->
    <Color x:Key="ControlBackgroundColor">#141015</Color>

    <!-- Lueur principale : nuit violette/bleutée (clair/obscur) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#28232A</Color>
    <!-- Brushes texte / communs -->
    <SolidColorBrush x:Key="TextBrush"               Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"            Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"      Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"         Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"            Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"     Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"          Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"      Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush"  Color="{DynamicResource ControlBackgroundColor}" />

    <!-- HUB / cartes -->
    <SolidColorBrush x:Key="BorderBrushAHBrush"      Color="{DynamicResource BorderBrushAH}" />
    <SolidColorBrush x:Key="BackgroundAHBrush"       Color="{DynamicResource BackgroundAH}" />
    <SolidColorBrush x:Key="HubBottomBannerBrush"    Color="{DynamicResource HubBottomBanner}" />
    <SolidColorBrush x:Key="CardStatBrush"           Color="{DynamicResource CardStat}" />
    <SolidColorBrush x:Key="CardBorderBrush"         Color="{DynamicResource CardBorder}" />
    <SolidColorBrush x:Key="AccentBrush"             Color="{DynamicResource Accent}" />
    <SolidColorBrush x:Key="BackgroundAHDarkBrush"   Color="{DynamicResource BackgroundAHDark}" />

    <!-- Bouton Play – lueur froide sur base sombre -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#332A2334" Offset="0.00" />
        <GradientStop Color="#FF141015" Offset="0.90" />
    </LinearGradientBrush>

    <!-- Focus global – contour or bien marqué -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F4D58A" Offset="0.0" />
        <GradientStop Color="#F4D58A" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bordures non focus – très léger, juste pour séparer -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#201F1A1C" Offset="0" />
        <GradientStop Color="#20131215" Offset="1" />
    </LinearGradientBrush>

    <!-- *** BASE DU THÈME *** -->
    <!-- Overlay principal : clair/obscur, noir profond en bas -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#352B30" Offset="0.0" />
        <GradientStop Color="#1A1512" Offset="0.50" />
        <GradientStop Color="#0A0807" Offset="1.0" />
    </LinearGradientBrush>


    <!-- Bord des menus – liseré or GOTY très visible -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#F9E2A9" Offset="0.0"/>
        <GradientStop Color="#2D1F19" Offset="0.65"/>
        <GradientStop Color="#1A1512" Offset="1.0"/>
    </LinearGradientBrush>


    <!-- Ombre principale – transition claire → obscur avec rappel bordeaux -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.0" />
        <GradientStop Color="#402F2224" Offset="0.20" />
        <GradientStop Color="#FF181416" Offset="0.45" />
        <GradientStop Color="#FF000000" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées (panneaux les plus sombres) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#0C090B" Offset="0.10" />
        <GradientStop Color="#060406" Offset="1.00" />
    </LinearGradientBrush>

    <!-- *** TROPHÉES : légèrement plus lumineux, teinte violette/bordeaux + or discret *** -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#3A3138" Offset="0.00" />
        <GradientStop Color="#221A18" Offset="1.00" />
    </LinearGradientBrush>


    <!-- Fond radial trophées – halo froid + chute dans le noir -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.0" />
        <GradientStop Color="#271D30" Offset="0.55" />
        <GradientStop Color="#000000" Offset="1.0" />
    </RadialGradientBrush>

</ResourceDictionary>
