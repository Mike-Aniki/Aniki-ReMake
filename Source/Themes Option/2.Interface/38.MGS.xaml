<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">38</sys:Int32>

    <!-- Accent des liens / icônes (HUD "codec" mint) -->
    <Color x:Key="GlyphColor">#7FE3C1</Color>
    <!-- Halo derrière jaquettes focus -->
    <Color x:Key="GlowFocusColor">#A1FFD8</Color>

    <!-- Textes -->
    <Color x:Key="TextColor">#EAF0EC</Color>
    <Color x:Key="TextSecondaryColor">#CFD8D3</Color>
    <Color x:Key="TextDetail">#A7B4AD</Color>
    <Color x:Key="TextAltDetail">#FFFFFF</Color>
    <!-- Surlignage discret (warnings/labels) -->
    <Color x:Key="TextHighlight">#E6D27A</Color>

    <!-- Valeurs HLTB / sous-infos -->
    <Color x:Key="HltbAlt">#9BC8B7</Color>

    <!-- Glow principal (Play + fonds radiaux) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#3E4A44</Color>

    <!-- Brushes texte/HLTB associés -->
    <SolidColorBrush x:Key="TextBrush"           Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"        Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"  Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"     Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"        Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"      Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"  Color="{DynamicResource TextHighlight}" />

    <!-- Bouton Play : glow mint -> vert carbone -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.06"/>
        <GradientStop Color="#1A2420" Offset="0.84"/>
        <GradientStop Color="#111816" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure de focus : ivoire -> khaki (warning) -> mint codec -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#7FE3C1" Offset="0.00"/>
        <GradientStop Color="#E6D27A" Offset="0.45"/>
        <GradientStop Color="#7FE3C1" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure non focus : olive/anthracite -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2B3430" Offset="0"/>
        <GradientStop Color="#18201D" Offset="1"/>
    </LinearGradientBrush>

    <!-- OverlayMenu : (ta base) olive tactique -> vert sombre -> presque noir -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#3E4A44" Offset="0.0" />
        <GradientStop Color="#2A312C" Offset="0.40" />
        <GradientStop Color="#121513" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bord des menus : khaki -> mint codec -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#E6D27A" Offset="0.0"/>
        <GradientStop Color="#29F3B6" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Shades (légère teinte verte, sans boucher) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#20101010" Offset="0.20"/>
        <GradientStop Color="#50322F30" Offset="0.45"/>
        <GradientStop Color="#FF0B0F0D" Offset="1.00"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBottom" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#BF000000" Offset="0.00"/>
        <GradientStop Color="#59000000" Offset="0.10"/>
        <GradientStop Color="#00000000" Offset="0.26"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeLeft" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#99000000" Offset="0.00"/>
        <GradientStop Color="#55000000" Offset="0.20"/>
        <GradientStop Color="#22000000" Offset="0.30"/>
        <GradientStop Color="#00000000" Offset="0.40"/>
    </LinearGradientBrush>

    <!-- Fenêtres Playnite non contrôlées : vert très sombre homogène -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#0F1412" Offset="0.10"/>
        <GradientStop Color="#0F1412" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées (non focus) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#131A17" Offset="0.00"/>
        <GradientStop Color="#0F1412" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial (vues Trophées/DLC/Stats/Screens) : mint -> olive -> noir -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.00"/>
        <GradientStop Color="#1B2A24" Offset="0.70"/>
        <GradientStop Color="#080B0A" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
