<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">21</sys:Int32>

    <!-- Accent / liens (or Zanarkand) -->
    <Color x:Key="GlyphColor">#F3C24C</Color>
    <!-- Halo focus (ambre clair, lisible) -->
    <Color x:Key="GlowFocusColor">#FFD672</Color>

    <!-- Textes -->
    <Color x:Key="TextColor">#F3F7FA</Color>
    <Color x:Key="TextSecondaryColor">#DEE7EF</Color>
    <Color x:Key="TextDetail">#B0BECC</Color>
    <Color x:Key="TextAltDetail">#FFFFFF</Color>
    <!-- Surlignage (aqua, rappel de l’eau / blitzball) -->
    <Color x:Key="TextHighlight">#9EDCFF</Color>

    <!-- Secondaires / HLTB (acier bleuté clair) -->
    <Color x:Key="HltbAlt">#C3D1DC</Color>

    <!-- Glow principal (bleu FFX) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#1E6BB8</Color>

    <!-- Fond contrôles (graphite bleu nuit) -->
    <Color x:Key="ControlBackgroundColor">#0E141C</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="TextBrush"             Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"          Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"    Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"       Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"          Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"   Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"        Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"    Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play : bleu → encre -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2A6CB5" Offset="0.06"/>
        <GradientStop Color="#0D1A2A" Offset="0.70"/>
        <GradientStop Color="#071223" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure focus : or sunset → bleu océan → or -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F7C94A" Offset="0.0" />
        <GradientStop Color="#F3C24C" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bordure non focus : ardoise froide -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#402A6CB5" Offset="0"/>
        <GradientStop Color="#402A6CB5" Offset="1"/>
    </LinearGradientBrush>

    <!-- OverlayMenu : bleu FFX (Besaid/Zanarkand) -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#9BD8FF" Offset="0.00"/>
        <GradientStop Color="#2A6CB5" Offset="0.45"/>
        <GradientStop Color="#0A1422" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bord des menus : or → bleu nuit -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#80F7C94A" Offset="0.0"/>
        <GradientStop Color="#80F3C24C" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Shades (teinte bleue, profondeur océan) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#409BD8FF" Offset="0.45"/>
        <!-- 25% noir -->
        <GradientStop Color="#1E6BB8" Offset="0.70"/>
        <!-- 69% noir -->
        <GradientStop Color="#0A1422" Offset="1.00"/>
        <!-- 90% noir -->
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBottom" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#B3000000" Offset="0.00"/>
        <GradientStop Color="#59000000" Offset="0.10"/>
        <GradientStop Color="#00000000" Offset="0.26"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeLeft" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#99000000" Offset="0.00"/>
        <GradientStop Color="#55000000" Offset="0.20"/>
        <GradientStop Color="#22000000" Offset="0.30"/>
        <GradientStop Color="#00000000" Offset="0.40"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées (graphite bleu) -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#0D141C" Offset="0.10"/>
        <GradientStop Color="#0D141C" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées (non focus) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#0E141C" Offset="0.00"/>
        <GradientStop Color="#0E141C" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial (lueur d’océan) -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess" Center="0.5,0.4" GradientOrigin="0.5,0.4" RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.00"/>
        <GradientStop Color="#0A1730" Offset="0.40"/>
        <GradientStop Color="#060A12" Offset="1.00"/>
    </RadialGradientBrush>
</ResourceDictionary>
