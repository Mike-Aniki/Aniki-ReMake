<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">37</sys:Int32>

    <!-- Accents – or corrompu -->
    <Color x:Key="GlyphColor">#B59C58</Color>
    <!-- or terni -->
    <Color x:Key="GlowFocusColor">#E9D88A</Color>
    <!-- halo d’or mourant -->

    <!-- Textes -->
    <Color x:Key="TextColor">#E8E6E0</Color>
    <!-- ivoire éteint -->
    <Color x:Key="TextSecondaryColor">#D0D2CA</Color>
    <Color x:Key="TextDetail">#999F96</Color>
    <Color x:Key="TextAltDetail">#FFFFFF</Color>
    <Color x:Key="TextHighlight">#DCCB87</Color>
    <!-- or faible -->

    <!-- Secondaires / HLTB -->
    <Color x:Key="HltbAlt">#A0A69A</Color>

    <!-- Glow principal – vert spectral sombre -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#1F2A21</Color>

    <!-- Fond contrôles – noir cendré -->
    <Color x:Key="ControlBackgroundColor">#0A0B0A</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="TextBrush"              Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"           Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"     Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"        Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"           Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"    Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"         Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"     Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play – vert spectral -> noir -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2E3B2E" Offset="0.05"/>
        <GradientStop Color="#131613" Offset="0.70"/>
        <GradientStop Color="#070807" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Focus – or terni -> vert spectral -> or pâle -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#B59C58" Offset="0.0"/>
        <GradientStop Color="#1F2A21" Offset="0.45"/>
        <GradientStop Color="#E9D88A" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Non focus – pierre froide -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#232523" Offset="0"/>
        <GradientStop Color="#171917" Offset="1"/>
    </LinearGradientBrush>

    <!-- Overlay – vert antique -> noir cendre -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#3E4B3C" Offset="0.0"/>
        <GradientStop Color="#1F2A21" Offset="0.45"/>
        <GradientStop Color="#080908" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bord de menu – cuivre noirci -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#9A864C" Offset="0.0"/>
        <GradientStop Color="#080908" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Shades – fumée neutre, pas de teinte colorée -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.0"/>
        <GradientStop Color="#33000000" Offset="0.30"/>
        <GradientStop Color="#88000000" Offset="0.70"/>
        <GradientStop Color="#EE000000" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBottom" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#D0000000" Offset="0.00"/>
        <GradientStop Color="#70000000" Offset="0.10"/>
        <GradientStop Color="#00000000" Offset="0.25"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeLeft" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#AA000000" Offset="0.00"/>
        <GradientStop Color="#55000000" Offset="0.25"/>
        <GradientStop Color="#00000000" Offset="0.45"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#0B0C0B" Offset="0.10"/>
        <GradientStop Color="#0B0C0B" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#0A0B0A" Offset="0.00"/>
        <GradientStop Color="#0A0B0A" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial – lueur d’arbre corrompu -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="#3E4B3C" Offset="0.00"/>
        <GradientStop Color="#1F2A21" Offset="0.45"/>
        <GradientStop Color="#080908" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
