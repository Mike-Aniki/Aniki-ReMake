<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    mc:Ignorable="d">


    <sys:Int32 x:Key="BackgroundImageIndex">3</sys:Int32>

    <Color x:Key="GlyphColor">#FFB0B0B0</Color>
    <!-- liens / icônes -->
    <Color x:Key="TextSecondaryColor">#FFE0E0E0</Color>
    <!-- sous-titres / infos -->
    <Color x:Key="TextDetail">#FFB0B0B0</Color>
    <!-- détails (icônes à côté des textes) -->
    <Color x:Key="TextAltDetail">#FFE0E0E0</Color>
    <!-- texte principal (vue Détails) -->
    <Color x:Key="HltbAlt">#FFB8B8B8</Color>
    <!-- bleu HLTB -->

    <!-- Glow principal désormais ORANGE (teinte Play & Success) -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#FF141414</Color>

    <!-- Brushes textes/HLTB -->
    <SolidColorBrush x:Key="HltbAltBrush"        Color="{DynamicResource HltbAlt}"/>
    <SolidColorBrush x:Key="TextDetailAltBrush"  Color="{DynamicResource TextAltDetail}"/>
    <SolidColorBrush x:Key="TextDetailBrush"     Color="{DynamicResource TextDetail}"/>
    <SolidColorBrush x:Key="TextAltBrush"        Color="{DynamicResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="{DynamicResource TextSecondaryColor}"/>

    <SolidColorBrush x:Key="TextBrush" Color="#FFB0B0B0"/>

    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.10"/>
        <GradientStop Color="#FF000000" Offset="0.85"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Focus bordure : halo premium (centre clair → bords chauds) -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFB0B0B0" Offset="0.00"/>
        <!-- lueur -->
        <GradientStop Color="#FFB0B0B0" Offset="0.50"/>
        <GradientStop Color="#FFB0B0B0" Offset="1.00"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF000000" Offset="0.00"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Shades -->
    <!-- Shades -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#60101010" Offset="0.20"/>
        <GradientStop Color="#FF0B0B0B" Offset="0.45"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBottom" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#BF000000" Offset="0.00"/>
        <GradientStop Color="#59000000" Offset="0.10"/>
        <GradientStop Color="#00000000" Offset="0.26"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeLeft" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#A6000000" Offset="0.00"/>
        <GradientStop Color="#66000000" Offset="0.20"/>
        <GradientStop Color="#22000000" Offset="0.30"/>
        <GradientStop Color="#00000000" Offset="0.40"/>
    </LinearGradientBrush>

    <!-- Fenêtres Playnite non contrôlées -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#FF0C0C0C" Offset="0.10"/>
        <GradientStop Color="#FF0C0C0C" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Trophées (non focus) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#FF0D0D0D" Offset="0.00"/>
        <GradientStop Color="#FF060606" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial neutre (Trophées / DLC / Stats / Screenshots) -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.00"/>
        <GradientStop Color="#FF0C0C0C" Offset="0.70"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
