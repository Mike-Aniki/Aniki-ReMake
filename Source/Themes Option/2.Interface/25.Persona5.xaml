<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    mc:Ignorable="d">

    <sys:Int32 x:Key="BackgroundImageIndex">25</sys:Int32>

    <sys:Double x:Key="FontSizeSmall">20</sys:Double>
    <sys:Double x:Key="FontSize">26</sys:Double>
    <Color x:Key="GlyphColor">#26B7FF</Color>
    <Color x:Key="BorderDark">#9C5A62</Color>
    <Color x:Key="BorderLight">#F5E9EB</Color>
    <Color x:Key="SelectionLightColor">#E5E4E2</Color>
    <Color x:Key="ControlBackgroundColor">#290809</Color>
    <Color x:Key="ControlBackgroundColorDark">#140405</Color>
    <Color x:Key="TextSecondaryColor">#E5E4E2</Color>
    <Color x:Key="TextDetail">#C49195</Color>
    <Color x:Key="TextAltDetail">#E5E4E2</Color>
    <Color x:Key="HltbAlt">#FF8A92</Color>
    <Color x:Key="DynamicGlowBackgroundPrimary">#E23A3F</Color>

    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.10" />
        <GradientStop Color="#D00005" Offset="0.90" />
    </LinearGradientBrush>


    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#D93134" Offset="0.0" />
        <GradientStop Color="#D00005" Offset="0.40" />
        <GradientStop Color="#D00005" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.0" />
        <GradientStop Color="#60D00005" Offset="0.2" />

        <GradientStop Color="#D00005" Offset="0.45" />

        <GradientStop Color="#FF000000" Offset="1.0" />
    </LinearGradientBrush>


    <LinearGradientBrush x:Key="ShadeBottom" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#BF000000" Offset="0.00" />
        <GradientStop Color="#59000000" Offset="0.10" />
        <GradientStop Color="#00000000" Offset="0.26" />
    </LinearGradientBrush>


    <LinearGradientBrush x:Key="ShadeLeft" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#A6000000" Offset="0.0" />
        <GradientStop Color="#66000000" Offset="0.20" />
        <GradientStop Color="#22000000" Offset="0.30" />
        <GradientStop Color="#00000000" Offset="0.40" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#290809" Offset="0.1" />
        <GradientStop Color="#290809" Offset="4" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#290809" Offset="0" />
        <GradientStop Color="#290809" Offset="3" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess" Center="0.5,0.4" GradientOrigin="0.5,0.4" RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.0" />
        <GradientStop Color="#290809" Offset="0.7" />
        <GradientStop Color="#000000" Offset="1.0" />
    </RadialGradientBrush>


    <Style x:Key="TextThemeOptionStyle" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBaseStyle}">
        <Setter Property="FontSize" Value="34" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="Segoe UI Black Italic" />
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0" />
                    <GradientStop Color="#B0B3B8" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Direction="320" />
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>