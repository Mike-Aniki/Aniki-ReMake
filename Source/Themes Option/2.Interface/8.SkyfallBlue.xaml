<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    mc:Ignorable="d">

    <sys:Int32 x:Key="BackgroundImageIndex">8</sys:Int32>

    <!-- Accent & focus -->
    <Color x:Key="GlyphColor">#26B7FF</Color>
    <Color x:Key="GlowFocusColor">#69C8FF</Color>

    <!-- Textes -->
    <Color x:Key="TextColor">#F2F3F5</Color>
    <Color x:Key="TextSecondaryColor">#E5E4E2</Color>
    <Color x:Key="TextDetail">#8FB6D8</Color>
    <Color x:Key="TextAltDetail">#E5E4E2</Color>
    <Color x:Key="HltbAlt">#5AA9E6</Color>

    <!-- Fonds -->
    <Color x:Key="ControlBackgroundColor">#043D6E</Color>

    <!-- Titre / Highlight -->
    <Color x:Key="TextHighlight">#D1E9FF</Color>

    <!-- Brushes texte et communs -->
    <SolidColorBrush x:Key="TextBrush"              Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"           Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"     Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"        Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"           Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"    Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"         Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"     Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />

    <!-- Bouton Play -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1E7FD1" Offset="0.10"/>
        <GradientStop Color="#043D6E" Offset="0.90"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#B8E2FF" Offset="0.00"/>
        <!-- clair -->
        <GradientStop Color="#B8E2FF" Offset="0.50"/>
        <!-- accent -->
        <GradientStop Color="#B8E2FF" Offset="1.00"/>
        <!-- foncé -->
    </LinearGradientBrush>

    <!-- Bordures boutons non focus -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2026282B" Offset="0"/>
        <GradientStop Color="#20151719" Offset="1"/>
    </LinearGradientBrush>


    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1E7FD1" Offset="0.0" />
        <GradientStop Color="#0362A9" Offset="0.4" />
        <GradientStop Color="#022E52" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Bordures menus -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#B8E2FF" Offset="0.00"/>
        <GradientStop Color="#022E52" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Ombre générale -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#60101010" Offset="0.20"/>
        <GradientStop Color="#FF043D6E" Offset="0.45"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlables -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#022A4B" Offset="0.10"/>
        <GradientStop Color="#022A4B" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fonds des cartes de trophées (légèrement plus clair que Overlay) -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0A4F8D" Offset="0.00"/>
        <GradientStop Color="#084477" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fond radial trophées (centre clair, bord fondu bleu nuit) -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="#0362A9" Offset="0.00"/>
        <!-- centre lumineux -->
        <GradientStop Color="#043D6E" Offset="0.55"/>
        <!-- base -->
        <GradientStop Color="#041A2C" Offset="1.00"/>
        <!-- contour -->
    </RadialGradientBrush>

</ResourceDictionary>