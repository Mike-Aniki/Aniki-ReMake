<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="BackgroundImageIndex">14</sys:Int32>

    <!-- Accents / liens (or NeoGeo) -->
    <Color x:Key="GlyphColor">#E2C15A</Color>

    <!-- Halo jaquettes focus (ambre) -->
    <Color x:Key="GlowFocusColor">#FFCC66</Color>

    <!-- Texte -->
    <Color x:Key="TextColor">#F5F7FA</Color>
    <Color x:Key="TextSecondaryColor">#D6DAE0</Color>
    <Color x:Key="TextDetail">#A2A9B3</Color>
    <Color x:Key="TextAltDetail">#FFFFFF</Color>
    <!-- Surlignage (ivoire chaud) -->
    <Color x:Key="TextHighlight">#FFF0C8</Color>

    <!-- Infos secondaires (HLTB) : doré doux -->
    <Color x:Key="HltbAlt">#DDBB55</Color>

    <!-- Glow principal (Play & fonds vues) : or -->
    <Color x:Key="DynamicGlowBackgroundPrimary">#21242A</Color>

    <!-- Brushes texte / accents -->
    <SolidColorBrush x:Key="TextBrush"              Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="HltbAltBrush"           Color="{DynamicResource HltbAlt}" />
    <SolidColorBrush x:Key="TextDetailAltBrush"     Color="{DynamicResource TextAltDetail}" />
    <SolidColorBrush x:Key="TextDetailBrush"        Color="{DynamicResource TextDetail}" />
    <SolidColorBrush x:Key="TextAltBrush"           Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush"    Color="{DynamicResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="GlowFocusBrush"         Color="{DynamicResource GlowFocusColor}" />
    <SolidColorBrush x:Key="TextHighlightBrush"     Color="{DynamicResource TextHighlight}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#1A1D22" />

    <!-- Bouton Play : or → onyx -->
    <LinearGradientBrush x:Key="ButtonPlayColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.10"/>
        <GradientStop Color="#1A1D22" Offset="0.85"/>
        <GradientStop Color="#13161A" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure de focus : ivoire → or → laiton -->
    <LinearGradientBrush x:Key="FocusGameBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFF0C8" Offset="0.00"/>
        <GradientStop Color="#E2C15A" Offset="0.50"/>
        <GradientStop Color="#8E6B24" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bordure non focus : métal froid discret -->
    <LinearGradientBrush x:Key="NoFocusBorderButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#4460666F" Offset="0"/>
        <GradientStop Color="#22434A52" Offset="1"/>
    </LinearGradientBrush>

    <!-- OverlayMenu : onyx premium avec souffle doré (opaque) -->
    <LinearGradientBrush x:Key="OverlayMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1B1E24" Offset="0.00"/>
        <GradientStop Color="#171A20" Offset="0.30"/>
        <GradientStop Color="#14171D" Offset="0.66"/>
        <GradientStop Color="#1C1810" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Bord des menus : or brossé -->
    <LinearGradientBrush x:Key="MenuBorderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#E2C15A" Offset="0.0"/>
        <GradientStop Color="#B7933A" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Ombre principale (standard : haut transparent → bas opaque) -->
    <LinearGradientBrush x:Key="ShadeBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000000" Offset="0.00"/>
        <GradientStop Color="#60101010" Offset="0.20"/>
        <GradientStop Color="#FF1A1D22" Offset="0.45"/>
        <GradientStop Color="#FF000000" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Fenêtres non contrôlées : graphite homogène -->
    <LinearGradientBrush x:Key="ControlBackgroundDarkBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#161A20" Offset="0.10"/>
        <GradientStop Color="#161A20" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Cartes trophées : légèrement plus clair que l’overlay, vertical -->
    <LinearGradientBrush x:Key="SuccessMenu" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#21242A" Offset="0.00"/>
        <GradientStop Color="#171A20" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Glow radial trophées : ambre (centre) → onyx -->
    <RadialGradientBrush x:Key="DynamicGlowBackgroundSuccess"
                         Center="0.5,0.4" GradientOrigin="0.5,0.4"
                         RadiusX="0.8" RadiusY="0.9">
        <GradientStop Color="{DynamicResource DynamicGlowBackgroundPrimary}" Offset="0.00"/>
        <GradientStop Color="#181B20" Offset="0.70"/>
        <GradientStop Color="#000000" Offset="1.00"/>
    </RadialGradientBrush>

</ResourceDictionary>
