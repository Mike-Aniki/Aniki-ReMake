							<RowDefinition Height="80" />
							<RowDefinition x:Name="DetailsRow" Height="*" />
							<RowDefinition Height="100" />
						</Grid.RowDefinitions>

						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="80"/>
						</Grid.ColumnDefinitions>

