														<Storyboard>
															<DoubleAnimation Storyboard.TargetProperty="Opacity"
																			 Duration="0:0:0"
																			 From="0.9"
																			 To="0"/>
														</Storyboard>
													</BeginStoryboard>
												</DataTrigger.ExitActions>
											</DataTrigger>

											<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
