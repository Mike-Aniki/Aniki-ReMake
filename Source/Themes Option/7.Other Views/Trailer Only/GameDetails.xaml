											<ImageBrush x:Name="DefaultBrush" ImageSource="{ThemeFile 'Images/Tes.png'}" RenderOptions.BitmapScalingMode="Fant" Stretch="UniformToFill"/>
										</Setter.Value>
									</Setter>
									<Style.Triggers>
									
									</Style.Triggers>
								</Style>
							</Border.Style>

						</Border>



