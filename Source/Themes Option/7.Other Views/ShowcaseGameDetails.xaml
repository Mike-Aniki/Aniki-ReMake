                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" SnapsToDevicePixels="True">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ReleaseYear}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[Alternativ]}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[NoYear]}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <TextBlock Style="{StaticResource TextBlockDetailStyle}" Opacity="0.8"
                                                   Text="{Binding Developers[0], Converter={StaticResource ListToStringConverter}}"
                                                   VerticalAlignment="Top"
                                                   FontSize="26" Margin="0,10,0,0.5" >
                                        </TextBlock>
                                        <TextBlock Style="{StaticResource TextBlockAltDetailStyle}"
                                                   Text="{Binding ReleaseYear, Converter={StaticResource ListToStringConverter}}"
                                                   VerticalAlignment="Center"
                                                   FontSize="26" Margin="5,10,5,0">
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Playtime -->
                                    <Grid Margin="0,4,0,0">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[NoTime]}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <!-- Si texte vide -> Collapsed -->
                                                    <DataTrigger Binding="{Binding ElementName=PlayedTime, Path=Text}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="34" SharedSizeGroup="InfoIcon"/>
                                            <ColumnDefinition Width="10" SharedSizeGroup="InfoGap"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="&#xec4e;" Style="{StaticResource InfoGlyphStyle}"/>
                                        <TextBlock Grid.Column="2" x:Name="PlayedTime"
                                                   Text="{Binding Playtime, Converter={StaticResource PlayTimeToStringConverter}}"
                                                   Style="{StaticResource InfoValueStyle}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Grid>

                                    <!-- Last activity -->
                                    <Grid Margin="0,4,0,0">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[NoActivity]}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=Played, Path=Text}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="34" SharedSizeGroup="InfoIcon"/>
                                            <ColumnDefinition Width="10" SharedSizeGroup="InfoGap"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="&#xec45;" Style="{StaticResource InfoGlyphStyle}"/>
                                        <TextBlock Grid.Column="2" x:Name="Played"
                                                   Text="{Binding LastActivity, StringFormat='{}{0:dd MMMM yyyy}'}"
                                                   Style="{StaticResource InfoValueStyle}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Grid>

                                    <!-- Install size -->
                                    <Grid Margin="0,4,0,0">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[NoSize]}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=Siz, Path=Text}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="34" SharedSizeGroup="InfoIcon"/>
                                            <ColumnDefinition Width="10" SharedSizeGroup="InfoGap"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="&#xef43;" Style="{StaticResource InfoGlyphStyle}"/>
                                        <TextBlock Grid.Column="2" x:Name="Siz"
                                                   Text="{Binding InstallSize, Converter={StaticResource NullableUlongBytesSizeToStringConverter}}"
                                                   Style="{StaticResource InfoValueStyle}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Grid>

                                    <!-- Completion -->
                                    <Grid Margin="0,4,0,0">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[NoCompletion]}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=Completed, Path=Text}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="34" SharedSizeGroup="InfoIcon"/>
                                            <ColumnDefinition Width="10" SharedSizeGroup="InfoGap"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="&#xec4c;" Style="{StaticResource InfoGlyphStyle}"/>
                                        <TextBlock Grid.Column="2" x:Name="Completed"
                                                   Text="{Binding CompletionStatus, Converter={StaticResource ListToStringConverter}}"
                                                   Style="{StaticResource InfoValueStyle}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Grid>

                                    <!-- Trophées (sécurisé) -->
                                    <Grid Margin="0,4,0,0">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{PluginSettings Plugin=SuccessStory, Path=HasData}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[NoTrophyDetails]}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <!-- Si pas de chiffres -> collapse -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{PluginSettings Plugin=SuccessStory, Path=Unlocked}" Value="{x:Null}"/>
                                                            <Condition Binding="{PluginSettings Plugin=SuccessStory, Path=Total}"    Value="{x:Null}"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </MultiDataTrigger>
                                                    <DataTrigger Binding="{PluginStatus Plugin=playnite-successstory-plugin, Status=Installed}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="34" SharedSizeGroup="InfoIcon"/>
                                            <ColumnDefinition Width="10" SharedSizeGroup="InfoGap"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icône: glyph par défaut, platine si 100% -->
                                        <Grid Grid.Column="0">
                                            <TextBlock Text="&#xedd7;">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource InfoGlyphStyle}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{PluginSettings Plugin=SuccessStory, Path=Percent}" Value="100">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <Image Width="28" Height="28" VerticalAlignment="Center"
                                                   Source="{ThemeFile 'Images/platinum.png'}">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{PluginSettings Plugin=SuccessStory, Path=Percent}" Value="100">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </Grid>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Unlocked, FallbackValue='-'}"
                                                       Margin="0,0,2,0" Style="{StaticResource InfoValueStyle}"/>
                                            <TextBlock Text="/" Margin="0,0,2,0" Style="{StaticResource InfoValueStyle}" Opacity="0.8"/>
                                            <TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Total, FallbackValue='-'}"
                                                       Style="{StaticResource InfoValueStyle}"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Genres -->
                                    <Grid Margin="0,4,0,0" x:Name="Genres">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[NoGenreDetails]}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Game.Genres}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="34" SharedSizeGroup="InfoIcon"/>
                                            <ColumnDefinition Width="10" SharedSizeGroup="InfoGap"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="&#xeec0;" Style="{StaticResource InfoGlyphStyle}"/>
                                        <Grid Grid.Column="2" HorizontalAlignment="Left">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <!-- genre0 -->
                                                <ColumnDefinition Width="Auto"/>
                                                <!-- slash -->
                                                <ColumnDefinition Width="*"/>
                                                <!-- genre1 (trimmé) -->
                                            </Grid.ColumnDefinitions>

                                            <!-- Genre 0 -->
                                            <TextBlock Grid.Column="0"
                                                       Style="{StaticResource InfoValueStyle}"
                                                       FontSize="26"
                                                       Text="{Binding Game.Genres.[0], TargetNullValue='', FallbackValue=''}"/>

                                            <!-- Slash séparateur -->
                                            <TextBlock Grid.Column="1"
                                                       FontSize="26"
                                                       Text=" &amp; ">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource InfoValueStyle}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Game.Genres.[1]}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Game.Genres.[0]}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Genre 1 (ellipsé) -->
                                            <TextBlock Grid.Column="2"
                                                       Style="{StaticResource InfoValueStyle}"
                                                       FontSize="26"
                                                       TextTrimming="CharacterEllipsis"
                                                       Text="{Binding Game.Genres.[1], TargetNullValue='', FallbackValue=''}"/>
                                        </Grid>

                                    </Grid>

                                    <!-- InGames (AnikiHelper) -->

                                    <Grid Margin="0,4,0,0" FocusVisualStyle="{x:Null}" Focusable="False">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <!-- Afficher uniquement si le nombre de joueurs est dispo -->
                                                    <DataTrigger Binding="{PluginSettings Plugin=AnikiHelper, Path=SteamCurrentPlayersAvailable}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[NoPlayerDetails]}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="34" SharedSizeGroup="InfoIcon"/>
                                            <ColumnDefinition Width="10" SharedSizeGroup="InfoGap"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icône -->
                                        <TextBlock Grid.Column="0"
                                                   Text="&#xecf9;"
                                                   Style="{StaticResource InfoGlyphStyle}"/>

                                        <StackPanel Grid.Column="2"
                                                    Margin="0,0,0,0"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center">

                                            <!-- Nombre de joueurs (depuis AnikiHelper) -->
                                            <TextBlock VerticalAlignment="Center"
                                                       Style="{StaticResource InfoValueStyle}"
                                                       FontSize="26"
                                                       Text="{PluginSettings Plugin=AnikiHelper, Path=SteamCurrentPlayersString}"/>

                                            <!-- Label "in game" -->
                                            <TextBlock Margin="6,0,0,0"
                                                       VerticalAlignment="Center"
                                                       Style="{StaticResource InfoValueStyle}"
                                                       FontSize="26"
                                                       Text="{DynamicResource LOCPlayerInGame}"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- HLTB -->
                                    <Grid Margin="0,5,0,0" x:Name="HltbStack">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{PluginSettings Plugin=HowLongToBeat, Path=HasData}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{PluginSettings Plugin=HowLongToBeat, Path=MainStoryFormat}" Value="--"/>
                                                            <Condition Binding="{PluginSettings Plugin=HowLongToBeat, Path=MainExtraFormat}" Value="--"/>
                                                            <Condition Binding="{PluginSettings Plugin=HowLongToBeat, Path=CompletionistFormat}" Value="--"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </MultiDataTrigger>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[NoHLTBDetails]}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="34" SharedSizeGroup="InfoIcon"/>
                                            <ColumnDefinition Width="10" SharedSizeGroup="InfoGap"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="&#xef49;" Style="{StaticResource InfoGlyphStyle}"/>
                                        <StackPanel Grid.Column="2" VerticalAlignment="Top" Orientation="Horizontal">
                                            <TextBlock Text="{PluginSettings Plugin=HowLongToBeat, Path=MainStoryFormat}" Style="{StaticResource InfoValueStyle}"/>
                                            <TextBlock Text="&#xec79;" Margin="6,0,4,2" Style="{StaticResource InfoGlyphStyle}" Opacity="0.95"/>
                                            <TextBlock Text="{PluginSettings Plugin=HowLongToBeat, Path=MainExtraFormat}" Margin="5,0" Style="{StaticResource InfoValueStyle}"/>
                                            <TextBlock Text="&#xeeaa;" Margin="0,0,4,1" Style="{StaticResource InfoGlyphStyle}" Opacity="0.95"/>
                                            <TextBlock Text="{PluginSettings Plugin=HowLongToBeat, Path=CompletionistFormat}" Style="{StaticResource InfoValueStyle}" />
                                        </StackPanel>
                                    </Grid>

                                    <!-- Features -->

                                    <ItemsControl x:Name="Features" Margin="0,2,0,5"
                                                  ItemsSource="{Binding Game.Features}"
                                                  Focusable="False"
                                                  FocusVisualStyle="{x:Null}"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Bottom">
                                        <ItemsControl.Style>
                                            <Style TargetType="ItemsControl">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=HasItems}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ThemeOptions, Path=Options[FeaturesSteam]}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ItemsControl.Style>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel HorizontalAlignment="Left"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Image Width="40" Height="40"
                                                       Margin="0,0,6,0"
                                                       Opacity="0.8"
                                                       Stretch="Uniform"
                                                       Source="{ThemeFileBinding Name, PathFormat='Icons/Features/{0}.png'}"
                                                       RenderOptions.BitmapScalingMode="Fant">
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Opacity" Value="0.9"/>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Source}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                </StackPanel>

                                <!-- Separator -->
                                <Border Width="1" Margin="0,10,5,10" Grid.Column="6"
                                        Opacity="0.8"
                                        HorizontalAlignment="Left" VerticalAlignment="Stretch">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#33FFFFFF"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=Description, Path=IsKeyboardFocusWithin}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource FocusGameBorderBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=PART_HtmlDescription, Path=IsMouseOver}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource FocusGameBorderBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <!-- Separator -->
                                <Border Width="1" Margin="0,10,0,10" Grid.Column="6"
                                        Opacity="0.8"
                                        HorizontalAlignment="Right" VerticalAlignment="Stretch">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#33FFFFFF"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=Description, Path=IsKeyboardFocusWithin}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource FocusGameBorderBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=PART_HtmlDescription, Path=IsMouseOver}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource FocusGameBorderBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <Grid Grid.Column="6" Margin="5,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=Description, Path=IsKeyboardFocusWithin}" Value="True">
                                                    <Setter Property="Background" Value="#40000000"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=PART_HtmlDescription, Path=IsMouseOver}" Value="True">
                                                    <Setter Property="Background" Value="#40000000"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <ScrollViewerEx x:Name="Description"
                                                    FocusVisualStyle="{x:Null}"
                                                    KeyboardNavigation.TabNavigation="None"
                                                    PanningMode="VerticalOnly"
                                                    ScrollViewer.CanContentScroll="False"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Height="300"
                                                    ScrollViewer.VerticalScrollBarVisibility="Auto">


                                        <Grid HorizontalAlignment="Center">
                                            <HtmlTextView x:Name="PART_HtmlDescription"
                                                          TextOptions.TextFormattingMode="Display"
                                                          TextOptions.TextRenderingMode="Auto"
                                                          HtmlFontSize="20" HtmlFontFamily="Segoe UI"
                                                          HtmlForeground="{DynamicResource TextColor}"
                                                          LinkForeground="{DynamicResource GlyphColor}"
                                                          FocusVisualStyle="{x:Null}"/>
                                        </Grid>
                                    </ScrollViewerEx>
                                </Grid>



                            </Grid>

                        </Grid>


                        <!--Panel Update-->

                        <Grid x:Name="PanelUpdateGrid" Grid.RowSpan="3" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Top"
                              Margin="0,100,0,0" Width="1300" Panel.ZIndex="50" FocusVisualStyle="{x:Null}" RenderTransformOrigin="1,0"
                              KeyboardNavigation.TabNavigation="Cycle"
                              KeyboardNavigation.DirectionalNavigation="Contained"
                              KeyboardNavigation.ControlTabNavigation="None"
                              Focusable="False">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <TranslateTransform x:Name="PanelUpdateRightTranslate" X="0" Y="0"/>
                                </TransformGroup>
                            </Grid.RenderTransform>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- PORTE de sortie (à gauche) -->
                                <ToggleButtonEx x:Name="PanelUpdateGridExit"
                                                Grid.Column="0"
                                                Width="60"
                                                Height="60"
                                                Margin="0,0,16,0"
                                                VerticalAlignment="Center"
                                                pbeh:FocusBahaviors.FocusBinding="{Binding ElementName=PanelUpdateGrid, Path=IsVisible}"
                                                FocusVisualStyle="{x:Null}"
                                                IsChecked="{Binding ElementName=UpdatePanelToggle, Path=IsChecked, Mode=TwoWay}"
                                                KeyboardNavigation.DirectionalNavigation="Continue"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                TabIndex="99"
                                                Style="{StaticResource UpdatePanelExitButtonStyle}" />



                                <Grid Grid.Column="1" MaxWidth="1200">
                                    <!-- Fond verre fumé -->
                                    <Border Background="{DynamicResource OverlayMenu}"
                                            CornerRadius="16"
                                            Opacity="0.9"/>

                                    <!-- Reflet vertical discret -->
                                    <Border CornerRadius="16" Background="{DynamicResource GlassMainBrush}" IsHitTestVisible="False" />

                                    <!-- Liseré interne fin -->
                                    <Border CornerRadius="16"
                                            BorderBrush="{DynamicResource GlassInnerLineBrush}"
                                            Margin="1"
                                            BorderThickness="1"
                                            IsHitTestVisible="False"/>

                                    <Border Background="Transparent" CornerRadius="16" Padding="28,24,28,24">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=ContenuUpdateScroll, Path=IsKeyboardFocusWithin}" Value="True">
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                        <Setter Property="BorderBrush" Value="{DynamicResource FocusGameBorderBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=ContenuUpdateScroll, Path=IsMouseOver}" Value="True">
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                        <Setter Property="BorderBrush" Value="{DynamicResource FocusGameBorderBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.45"/>
                                        </Border.Effect>
                                        <Border.CacheMode>
                                            <BitmapCache RenderAtScale="1"/>
                                        </Border.CacheMode>


                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Margin="0,2,0,10"
                                                       Text="{DynamicResource LOCLatestUpdate}"
                                                       Style="{StaticResource InfoValueStyle}"
                                                       FontSize="26" />
                                            <!-- Titre de la news -->
                                            <TextBlock Margin="0,2,0,5"
                                                       Text="{PluginSettings Plugin=AnikiHelper, Path=SteamUpdateTitle}"
                                                       Style="{StaticResource InfoValueStyle}"
                                                       FontSize="26" />

                                            <!-- Date -->
                                            <TextBlock
                                                Text="{PluginSettings Plugin=AnikiHelper, Path=SteamUpdateDate}"
                                                Style="{StaticResource InfoValueStyle}"
                                                Opacity="0.7"
                                                Margin="0,2,0,10" />

                                            <!-- Contenu HTML dans ton HtmlTextView -->
                                            <ScrollViewerEx x:Name="ContenuUpdateScroll"
                                                            FocusVisualStyle="{x:Null}"
                                                            KeyboardNavigation.TabNavigation="None"
                                                            PanningMode="VerticalOnly"
                                                            ScrollViewer.CanContentScroll="False"
                                                            VerticalAlignment="Top"
                                                            MaxHeight="400"
                                                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                <ScrollViewerEx.Style>
                                                    <Style TargetType="ScrollViewerEx">
                                                        <!-- Par défaut : pas focusable -->
                                                        <Setter Property="Focusable" Value="False"/>
                                                        <Setter Property="IsTabStop" Value="False"/>

                                                        <Style.Triggers>
                                                            <!-- Quand le panneau est ouvert -->
