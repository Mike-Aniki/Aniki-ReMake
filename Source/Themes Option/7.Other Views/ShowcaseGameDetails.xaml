                                                              ItemsSource="{PluginSettings Plugin=ScreenshotUtilities, Path=CurrentScreenshotGroups}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Margin="0,0,0,32">

                                                                <!-- Nom du groupe (Steam, etc.) -->
                                                                <TextBlock Text="{Binding DisplayName}"
                                                                           FontSize="22"
                                                                           FontWeight="SemiBold"
                                                                           Style="{DynamicResource TextBlockBaseStyle}"
