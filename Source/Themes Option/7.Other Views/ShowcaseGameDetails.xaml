                                            <BitmapCache RenderAtScale="1"/>
                                        </Border.CacheMode>


                                        <!-- CONTENU DU PANNEAU -->
                                        <Grid MaxWidth="1600" HorizontalAlignment="Center">


                                            <StackPanel>

                                                <!-- Titre -->
                                                <TextBlock Text="Store screenshots"
                                                           FontSize="28"
                                                           FontWeight="SemiBold"
                                                           Style="{DynamicResource TextBlockBaseStyle}"
                                                           Margin="0,0,0,16" />

                                                <!-- LISTE DES GROUPES AVEC VIEWER + MINIATURES -->
