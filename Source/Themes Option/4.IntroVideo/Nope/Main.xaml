											<TextBlock Text="{DynamicResource LOCCriticScore}" HorizontalAlignment="Left" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}" TextTrimming="CharacterEllipsis" MaxWidth="220" />
											<TextBlock Text="{DynamicResource LOCCommunityScore}" HorizontalAlignment="Left" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}" TextTrimming="CharacterEllipsis" MaxWidth="220" />
											<TextBlock Text="{DynamicResource LOCTimePlayed}" HorizontalAlignment="Left" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}"  TextTrimming="CharacterEllipsis" MaxWidth="220" />
											<TextBlock Text="{DynamicResource LOCAgeRatingsLabel}" HorizontalAlignment="Left" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}" TextTrimming="CharacterEllipsis" MaxWidth="220" />
											<TextBlock Text="{DynamicResource LOCSize}" HorizontalAlignment="Left" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}" TextTrimming="CharacterEllipsis" MaxWidth="220" />
											<TextBlock Text="{DynamicResource LOCGenresLabel}" HorizontalAlignment="Left" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}" TextTrimming="CharacterEllipsis" MaxWidth="220" />
