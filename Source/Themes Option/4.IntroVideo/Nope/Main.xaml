										<Rectangle Fill="{DynamicResource TextAltBrush}" Height="330" VerticalAlignment="Stretch"  Margin="10,-300,0,0"
												   MaxWidth="2" Opacity="0.4" />

										<StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="210,-340,0,0"  Width="300" >
											<TextBlock Text="{Binding SelectedGame.Source}" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" MaxWidth="230"/>
											<TextBlock Text="{Binding SelectedGame.Platforms, Converter={StaticResource ListToStringConverter}}" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}" TextTrimming="CharacterEllipsis" MaxWidth="230"/>
											<TextBlock Text="{Binding SelectedGame.CriticScore}" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}" TextTrimming="CharacterEllipsis"  MaxWidth="230" />
											<TextBlock Text="{Binding SelectedGame.CommunityScore}" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}" TextTrimming="CharacterEllipsis"  MaxWidth="230"/>
											<TextBlock Text="{Binding SelectedGame.Playtime, Converter={StaticResource PlayTimeToStringConverter}}" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}" TextTrimming="CharacterEllipsis" MaxWidth="230"/>
											<TextBlock Text="{Binding SelectedGame.AgeRatings, Converter={StaticResource ListToStringConverter}}" Margin="0,5,0,0" FontSize="26" Style="{StaticResource TextVerticalStyle}" TextTrimming="CharacterEllipsis" MaxWidth="230"/>
											<TextBlock Text="{Binding SelectedGame.InstallSize, Converter={StaticResource NullableUlongBytesSizeToStringConverter}, ConverterParameter=' / '}" Margin="0,5,0,0"
