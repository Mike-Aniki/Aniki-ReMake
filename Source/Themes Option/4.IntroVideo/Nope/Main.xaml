											<Style TargetType="Image">
												<Style.Triggers>
													<MultiDataTrigger>
														<MultiDataTrigger.Conditions>
															<Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="False"/>
														</MultiDataTrigger.Conditions>
														<Setter Property="Visibility" Value="Visible"/>
													</MultiDataTrigger>
												</Style.Triggers>
											</Style>
										</Image.Style>
									</Image>
