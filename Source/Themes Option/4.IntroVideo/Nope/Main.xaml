							<!--Wallpaper Vertical List-->
							<Grid Name="Wallpaper" Panel.ZIndex="1" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Margin="20,20,1430,-40" >
								<DockPanel Height="220" Width="420" Margin="20,5,0,0" Opacity="1" HorizontalAlignment="Left" VerticalAlignment="Top" >
									<FadeImage Source="{Binding SelectedGame.BackgroundImage}" Stretch="UniformToFill"  HorizontalContentAlignment="Center" HorizontalAlignment="Center">
