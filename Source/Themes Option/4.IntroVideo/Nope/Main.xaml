											<TextBlock Margin="0,0,10,0" Text="{StaticResource LOCFilter}" Style="{DynamicResource TextBlockBaseStyle}"  HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="26"  />
										</StackPanel>

									</StackPanel>
								</Grid>
							</Grid>


