                                                    <MultiDataTrigger.EnterActions>
                                                        <PauseStoryboard BeginStoryboardName="BgZoomStoryboard"/>
                                                    </MultiDataTrigger.EnterActions>
                                                    <MultiDataTrigger.ExitActions>
                                                        <ResumeStoryboard BeginStoryboardName="BgZoomStoryboard"/>
