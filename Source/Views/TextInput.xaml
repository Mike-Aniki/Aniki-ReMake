<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style du bouton de texte -->
    <Style x:Key="TextInputButton"
           BasedOn="{StaticResource {x:Type ButtonEx}}"
           TargetType="ButtonEx">
        <Setter Property="Padding" Value="22,16"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="100"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
        <Setter Property="Background" Value="#1AFFFFFF"/>
        <Setter Property="BorderBrush" Value="#35FFFFFF"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ButtonEx">
                    <Grid RenderOptions.BitmapScalingMode="LowQuality">
                        <Border x:Name="Glow"
                                CornerRadius="10"
                                Background="#0034C759"
                                Margin="0"
                                Opacity="0"/>

                        <Border x:Name="Card"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border CornerRadius="8" Margin="1">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#14FFFFFF" Offset="0"/>
                                        <GradientStop Color="#09000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Border>

                        <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                   x:Name="TextContent" Margin="10,5,10,5" FontSize="26" >
                            <ContentPresenter />
                        </TextBlock>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Glow" Property="Background" Value="#8034C759"/>
                            <Setter TargetName="Glow" Property="Opacity" Value="1"/>
                            <Setter Property="Foreground" Value="#FFFFFFFF"/>
                            <Setter TargetName="Card" Property="BorderBrush" Value="#A0FFFFFF"/>
                            <Setter TargetName="Card" Property="Background" Value="{DynamicResource OverlayMenu}"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#FFFFFFFF"/>
                            <Setter TargetName="Card" Property="BorderBrush" Value="#80FFFFFF"/>
                            <Setter TargetName="Card" Property="Background" Value="{DynamicResource OverlayMenu}"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Card" Property="Background" Value="#33000000"/>
                            <Setter TargetName="Card" Property="BorderBrush" Value="#FFFFFFFF"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Card" Property="Opacity" Value="0.5"/>
                            <Setter Property="Foreground" Value="#88FFFFFF"/>
                            <Setter TargetName="Glow" Property="Opacity" Value="0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style de la case à cocher de texte -->
    <Style x:Key="TextInputCheckbox" BasedOn="{StaticResource {x:Type CheckBoxEx}}" TargetType="CheckBoxEx">
        <Setter Property="Margin" Value="0" />
    </Style>

    <!-- Style de la zone de texte de texte -->
    <Style x:Key="TextInputTextbox"
           TargetType="TextBox"
           BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Height" Value="64"/>
        <Setter Property="FontSize" Value="34"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
        <Setter Property="CaretBrush" Value="#FFFFFFFF"/>
        <Setter Property="Padding" Value="56,12,16,12"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#70FFFFFF"/>
        <Setter Property="Background" Value="{DynamicResource OverlayMenu}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid RenderOptions.BitmapScalingMode="LowQuality">
                        <Border x:Name="Card"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Opacity="0.8"/>

                        <Viewbox x:Name="Loupe" Width="28" Height="28"
                                 HorizontalAlignment="Left" VerticalAlignment="Center"
                                 Margin="16,0,0,0" Opacity="0.85">
                            <Canvas Width="24" Height="24">
                                <Ellipse Width="14" Height="14" Stroke="#B0FFFFFF" StrokeThickness="2"
                                         Canvas.Left="0" Canvas.Top="0"/>
                                <Path Stroke="#B0FFFFFF" StrokeThickness="2" Data="M 11,11 L 20,20"/>
                            </Canvas>
                        </Viewbox>

                        <ScrollViewer x:Name="PART_ContentHost" Margin="0" Focusable="False"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="Card" Property="Opacity" Value="1"/>
                            <Setter TargetName="Card" Property="BorderBrush" Value="#A0FFFFFF"/>
                            <Setter TargetName="Loupe" Property="Opacity" Value="0"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Card" Property="Opacity" Value="0.8"/>
                            <Setter TargetName="Card" Property="BorderBrush" Value="#90FFFFFF"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Card" Property="Opacity" Value="0.4"/>
                            <Setter Property="Foreground" Value="#88FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style du conteneur des options de texte -->
    <Style x:Key="TextInputOptionsBorder" TargetType="Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Margin" Value="12,20,12,8"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Width" Value="1264"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsKeyboardFocusWithin" Value="True">
            </Trigger>

            <Trigger Property="IsMouseOver" Value="True">
            </Trigger>

            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Style du conteneur des touches de texte -->
    <Style x:Key="TextInputKeysBorder" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource OverlayMenu}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Margin" Value="12,10,12,0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="BorderBrush" Value="#30FFFFFF"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Window.Loaded">
                <BeginStoryboard>
                    <Storyboard FillBehavior="HoldEnd">
                        <Int32Animation Storyboard.TargetProperty="(Grid.Column)" Duration="0:0:0" To="0"/>
                        <Int32Animation Storyboard.TargetProperty="(Grid.Row)" Duration="0:0:0" To="3"/>
                        <Int32Animation Storyboard.TargetProperty="(Grid.ColumnSpan)" Duration="0:0:0" To="3"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                <Setter Property="BorderBrush" Value="#80FFFFFF"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
        </Style.Triggers>
    </Style>


</ResourceDictionary>
